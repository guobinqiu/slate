  <div class="sidebar w204 fl">
    <div class="module categorys">
      <h3>所有商品分类</h3>
      {{ render(controller('JiliEmarBundle:Product:category', { 'qs': app.request.query.all, 'rt': 'jili_emar_product_retrieve' })) }}
     </div>
  </div>

  <div class="main w930 fr">
      {% render(controller('JiliEmarBundle:Product:recommend')) %}
  </div>

  <div class="commodityList">
        <h1>
            {{ crumbs_local }}{{  crumbs_local|length > 0 ? '-' : '' }} 宝贝列表{% if total is defined %}<span>共{{ total }}件宝贝</span>{% endif %}</h1>
      <div class="screen clearfix">

   {% set w_q = app.request.query.getInt('w')  %}{# website in  request url #}
        <dt class="fl">商城筛选：</dt>

        <dd class="fl w820 h28"> 


        {% if w_q is not defined or w_q == 0 %}
        <a  class="hover" onclick="javascript: return false;" href ="#" >全部</a> 
        {% else %}
        <a  href ="{{ path( app.request.attributes.get('_route'),  app.request.query.all|merge({'w': 0, "p":1, "pr":""})) }}">全部</a> 
        {% endif %}

        {% for webid,web in webs_filter %}
            {% if w_q is defined and w_q == webid %}
            <a href="#" class="hover" onclick="javascript:return false;" >{{ web.webName|e }}</a> 
            {% else %}
            <a href="{{ path( app.request.attributes.get('_route'), app.request.query.all|merge({'w': webid, "p":1, "pr":"" })) }}">{{ web.webName|e }}</a> 
            {% endif %}
