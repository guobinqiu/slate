{% for row in products %}
        <li>
        <dt class="image curPt"><img src="{{ row.pic_url }}" width="200" height="200" alt="pic url" /></dt>
          <dd class="clearfix">
            <div class="title">
			   {% if app.session.get('uid') is defined %}
			   <a href="{{ row.p_o_url|replace( { 'APIMemberId': app.session.get('uid') } ) }}" target="_blank"  rel="nofollow" ></a>
			   {% else %}
			   <a href="#">{% endif %}{{ row.p_name }}</a>
		   </div>
           <div class="detail">
            <span class="fl price">￥<strong>{{ row.cur_price }}</strong></span>
            <span class="tr fr fontNormal"><a class="shop corGlobRed" >{{ row.web_name }}</a><br/><p class="corLightGray">返利最高：<em class="corGlobRed">{{ web_commissions[row.web_id] }}%</em></p></span>
           </div>
		 </dd>
        </li>
{% else %}
<em>很抱歉，没有找到相关的商品。</em>
{% endfor %}
