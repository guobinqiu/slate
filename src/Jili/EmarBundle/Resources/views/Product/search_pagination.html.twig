{% for row in products %}
        <li>
          <dt class="image curPt"><a href="{{ path('jili_emar_default_redirect') ~ '?m=' ~ row.p_o_url  }}" target="_blank" ><img src="{{ row.pic_url }}" width="200" height="200" /></a></dt>
          <dd class="clearfix">
          <div class="title"><a href="{{ path('jili_emar_default_redirect') ~ '?m=' ~ row.p_o_url  }}" target="_blank" >{{ row.p_name  }}</a></div>
            <div class="detail">
				<span class="fl price">￥<strong>{{ row.cur_price }}</strong></span>
                <span class="tr fr fontNormal"><a class="shop corGlobRed" >{{ row.web_name }}</a><br/>
                  {% if web_commissions[row.web_id] is defined and  web_commissions[row.web_id] > 0 %}
                    <p class="corLightGray">返利最高：<em class="corGlobRed">{{ web_commissions[row.web_id] }}%</em></p>
                  {% endif %}
                </span>

			</div>
          </dd>
        </li> 

{% else %}
<em class="noResult borderGlob"><span class="icon"></span><span class="text">很抱歉，没有找到相关的商品。<span></em>
{% endfor %}

