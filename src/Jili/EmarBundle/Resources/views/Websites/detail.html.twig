{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}商家列表{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css140307/pageNumber.css') }} " rel="stylesheet" type="text/css">
<link href="{{ asset('css140307/recommend.css') }} " rel="stylesheet" type="text/css">
<link href="{{ asset('css140307/shopMore.css') }} " rel="stylesheet" type="text/css">
<link href="{{ asset('css140307/commodity834.css') }} " rel="stylesheet" type="text/css">
<link href="{{ asset('css140307/searchShop.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block javascript %}
<script src="{{ asset('js140307/recommend.js') }}" language="javascript"></script>
{% endblock %}


{% block body %}
  <div class="main w834 fl">
      <div class="shop-info module clearfix borderGlob">
        {% set href_ = path('jili_emar_default_redirect') ~ '?m=' ~ website.web_url|url_encode %}
        <div class="shop-info-l">
          <div class="shop_img"> <a href="{{ href_ }}" target="_blank" rel="nofollow"><img src="{{ website.logo_url }}" width="120" height="60" /></a>

{% if web_commission is defined and web_commission > 0 %}
            <p class="shop-rebate corLightGray">最高返利<em>{{ web_commission }}%</em></p>
{% endif %}
          </div>
          <a href="{{ href_ }}" class="goBtn" target="_blank" rel="nofollow" >去购物,赚米粒</a> 
        </div>
        <div class="shop-info-r">
          <h2 class="fontYH">{{ website.web_name }}</h2>
          <p class="intro">{{ website.information|raw }}</p>
          <p class="rebate">返利比率：<em>正常商品：7%  团购商品：2%  优惠券、礼品卡商品：4%</em></p>
        </div>
     </div><!-- eof shop-info -->
      {% if commission_list %}
      <div class="shopRecommend rebateDetail">
      	<h3>返利详情</h3>
        <div class="conWrap clearfix">
        	<table>
            	<thead>
                    <tr>
                    	<th>类目</th>
                   	    <th>返利</th>
                    </tr>
             	</thead>
                {% for row in commission_list %}
                <tbody>
                    <tr>
                       <td>{{row.commissionName}}</td>
                       <td>
                       {% if row.rebateType == cps_rebate_type.sale %}
                       销售额的{{row.user_rebate}}%
                       {% elseif row.rebateType == cps_rebate_type.order %}
                       每个订单{{row.user_rebate}}米粒
                       {% elseif row.rebateType == cps_rebate_type.point %}
                       {{row.user_rebate}}米粒
                       {% endif %}
                       </td>
                    </tr>
                </tbody>
                {% if (loop.index == (loop.length/2)|round) and (loop.index != loop.last )%}
                </table>
            <table>
                <thead>
                    <tr>
                        <th>类目</th>
                        <th>返利</th>
                    </tr>
                </thead>
                {% endif %}
                {% endfor %}
            </table>
        </div>
      </div>
      {% endif %}

    <div class="shopRecommend">
      {{  render( controller("JiliEmarBundle:Product:recommendByWeb",  {'wid': website.web_id } ) )  }}
    </div>

  </div><!-- eof main  -->

  <div class="sidebar w154 fr">

  <div class="busiSec">
    <h3 class="busiSecTit">同类商家推荐</h3>
    <div class="busiSecBd">
      <ul id="mallsRecommend">
        {% for row in same_cat_websites %}
        <li><a href="{{path('jili_emar_websites_detail', {'wid': row.web_id })}}" target="_blank">
            <img src="{{row.logo_url}}" width="120" height="60" alt="">
            {%if row.max_commission%}
            <span class="itemTxt">最高返<strong class="corGlobRed">{{row.max_commission}}%</strong></span>
            {%endif%}
            </a>
        </li>
        {% endfor %}
	  </ul>
    </div>
  </div>

  <div class="rebateProcess borderGlob marginBM5">
    	<h3>返利流程</h3>	
        <img src="{{ asset('images140307/rebateExplain.jpg') }}" />
    </div>
  </div>

{% endblock %}

