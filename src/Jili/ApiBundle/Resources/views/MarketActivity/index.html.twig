<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title>积粒网-商家活动</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<!-- [if lt IE9] -->
<script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
<!-- [endif] -->
<link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/cpsActivity.css') }}" rel="stylesheet" type="text/css">
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/cpsActivity.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/analytics.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
  var url = window.location.href;
  url = url.split("marketActivity/index/");
  if(url[1]){
    id = url[1].split("/");
    if(id[0].indexOf('?page=')>0){
      mall = id[0].split("?page=");
      $('.tags a').removeClass("hover");
      $('.btags a').removeClass("hover");
      $('#mall'+mall[0]).addClass("hover");
    }else{
      if(id[1]){
          if(id[1].indexOf('?page=')>0){
            cate = id[1].split("?page=");
            $('.tags a').removeClass("hover");
            $('.btags a').removeClass("hover");
            $('#mall'+id[0]).addClass("hover");
            $('#cate'+cate[0]).addClass("hover");
          }else{
            $('.tags a').removeClass("hover");
            $('.btags a').removeClass("hover");
            $('#mall'+id[0]).addClass("hover");
            $('#cate'+id[1]).addClass("hover");
          }
      }else{
        $('.tags a').removeClass("hover");
        $('.btags a').removeClass("hover");
        $('#mall'+id[0]).addClass("hover");
        $('#cate'+id[1]).addClass("hover");

      }
      
    }
  }
  {% if aid == 0 %}
      $('#mall').addClass("hover");
  {% else %}
      $(".unfoldBtn").hide();
      $(".tags").css("height","auto");
  {% endif %}
  {% if cateId == 0 %}
      $('#cate').addClass("hover");
  {% else %}
      $(".bunfoldBtn").hide();
      $(".btags").css("height","auto");
  {% endif %}
});
</script>
</head>
<body>
{% include 'JiliApiBundle::header.html.twig' %}
<div class="webArticle cpsActivity">
  <div class="topBtn"><a href="#"><img src="{{ asset('other/topBtn.jpg') }}" width="34" height="32"></a></div>
  <div class="classify">
      <h3>分类筛选</h3>
        <div class="classify-nav"><h4>商城：</h4><span class="tags">
      <a href="{{ path('_marketActivity_index',{'aid': 0 ,'cateId' : cateId }) }}" class="hover" id="mall">全部</a>
      {% for item in nowMall %}
          <a href="{{ path('_marketActivity_index',{'aid': item.aid ,'cateId' : cateId }) }}" id="mall{{ item.aid }}">{{ item.title }}</a>
      {% endfor %}
        <a class="unfoldBtn" style="display:none;">展开</a> 
</span></div><div class="classify-nav"><h4>类别：</h4><span class="btags">
        <a href="{{ path('_marketActivity_index',{'aid': aid ,'cateId' : 0 }) }}" class="hover" id="cate">全部</a>
      {% for item in cate %}
          <a href="{{ path('_marketActivity_index',{'aid': aid ,'cateId' : item.id }) }}" id="cate{{ item.id }}">{{ item.category }}</a>
      {% endfor %}
      <a class="bunfoldBtn" style="display:none;">展开</a> 
</span></div>
    </div>
    <div class="activityOverflow">
    
        <ul class="activityAll">
        {% if busi %}
            {% for item in pagin %}
                     <li><a href="{{ path('_checkin_location') }}?markid={{ item.id }}&type=2" target="_blank"><img src="{{ asset(item.activityImage) }}" width="470" height="200"></a><div class="more"><h4>{{ item.businessName }}</h4><a class="moreBtn" href="{{ path('_checkin_location') }}?markid={{ item.id }}&type=2" target="_blank">查看详情>></a></div></li>         
             {% endfor %}
          {% else %}
              <p class="noInfo" align="center">暂无此类商家活动</p>
          {% endif%}
          </ul>
          <div style="width: 100%; display: inline-block;">{{ knp_pagination_render(pagin) }}</div>
   
        <!--<div class="loading"><img src="{{ asset('other/loading.gif') }}" width="48" height="48"></div>-->
    </div>
</div>
{% include 'JiliApiBundle::footer.html.twig' %}
</body>
</html>