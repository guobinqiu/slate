<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>91jili landingpage</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/landing.css')}}">
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script type="text/javascript">
function fastreg(){
	$("#form1").submit();
}
</script>
</head>
<body>
<div id="landing">
  <div id="landingTop">
    <div id="logo"><a href="{{ path('_homepage') }}" target="_blank"><img src="{{ asset('images/landing2/logo.png') }}" width="142" height="39" alt="积粒网" /></a></div>
  </div>
  <div id="landingMain" class="clearfix">
    <div class="register">
      <h1><img src="{{ asset('images/landing2/h1.png') }}" width="302" height="131" /></h1>
      <form action="{{ path('_default_landing') }}" method="post" name="form1" id="form1" >
      <div class="error">{{err_msg}}</div>
    {% if is_user==1 %}
    <ul id="loginFrom">
      <li class="yellow">您已经注册过了，请直接登录！</li>
        <li><input type="text" value="{{ email }}" disabled="" name=""></li>
        <li><a href="{{ path('_user_login') }}"><input type="button" value="直接登录" class="loginBtn" name="直接登录"></a></li>
     </ul>
      
    {% else %}
      <ul id="registerFrom">
      	<li><input name="nick" type="text" value="{% if nick %}{{ nick }}{% else %}输入昵称{% endif %}" onfocus="if (value =='输入昵称'){value =''}" onblur="if (value ==''){value='输入昵称'}" /></li>
        <li><input name="" type="text" value="{{ email }}" onfocus="if (value =='输入邮箱地址'){value =''}" onblur="if (value ==''){value='输入邮箱地址'}" disabled="disabled"/><a class="otherMail" href="{{ path('_user_reg') }}" target="_blank">其他邮箱注册</a></li>
        <li><input name="pwd" type="text" value="输入密码" class="short mr4" onfocus="if (value =='输入密码'){value ='',type='password'}" onblur="if (value ==''){value='输入密码',type='text'}" /><input name="newPwd" type="text" class="short" value="确认密码" onfocus="if (value =='确认密码'){value ='',type='password'}" onblur="if (value ==''){value='确认密码',type='text'}" /></li>
        <li><input name="1秒注册积粒网" type="button" class="registerBtn" value="1秒注册积粒网" onclick="fastreg()"/></li>
      </ul>
    {% endif %}
    </div>
    <ul class="function" class="clearfix">
    <li class="shopping"><img src="{{ asset('images/landing2/shopping.png') }}" width="309" height="260" alt="购物返利" /></li>
    <li class="game"><img src="{{ asset('images/landing2/game.png') }}" width="260" height="220" alt="游戏体验" /></li>
    <li class="marketActivity"><img src="{{ asset('images/landing2/marketActivity.png') }}" width="309" height="150" alt="每日签到" /></li>
    <li class="advertiserment"><img src="{{ asset('images/landing2/advertiserment.png') }}" width="260" height="190" alt="体验广告"/></li>
    </ul>
  </div>
  <div id="timeline">
    <div class="exchangeTimeline">
      <div id="demo">
        <div id="indemo">
          <div id="demo1"> </div>
          <div id="demo2"> </div>
          <div id="demo3"> </div>
        </div>
      </div>
    </div>
  </div>
  <div id="introduce"><img src="{{ asset('images/landing2/stepAll.jpg') }}" width="928" height="67" /></div>
  
</div>
<script>
	{% autoescape false %}
	var recent = '{{recent|json_encode()}}';
	{% endautoescape %}
	
	var FeedData = eval(recent);
	
	var msg = "";
	var speed=40; //数字越大速度越慢 20
	var tab=document.getElementById("demo"); 
	var tab1=document.getElementById("demo1"); 
	var tab2=document.getElementById("demo2"); 
	var tab3=document.getElementById("demo3");
	var MyMar = null;
	function Marquee(){ 
		if(tab3.offsetWidth-tab.scrollLeft<=0) {
			tab.scrollLeft -= tab1.offsetWidth;
		}else{ 
			tab.scrollLeft++; 
		} 
	}
	tab.onmouseover=function() {clearInterval(MyMar)}; 
	tab.onmouseout=function() {MyMar=setInterval(Marquee,speed)}; 
	if(FeedData != null && FeedData.length > 0) {
		
		for(var i = 0; i < FeedData.length; i ++) {
				   msg += FeedData[i].title + "&nbsp&nbsp;&nbsp;&nbsp;&nbsp;"
		
		}
		MyMar=setInterval(Marquee,speed); 
	}
	tab1.innerHTML = msg;
	tab2.innerHTML = msg;
	tab3.innerHTML = msg;
	</script>
