<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title>积粒网-7月份活动</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<link href="{{ asset('css/jl.ui.July.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
</head>

<body>
<div class="activityCon">
        <img src="{{ asset('images/july/July_02.jpg') }}" alt="7月活动" width="1171" height="125" border="0" usemap="#Map" title="7月活动"/>
        <map name="Map">
          <area shape="rect" coords="960,21,1039,40" href="{{ path('_homepage') }}" target="_blank">
        </map>
        <img src="{{ asset('images/july/July_04.jpg') }}" width="1171" height="125" alt="7月活动" title="7月活动"/>
        <img src="{{ asset('images/july/July_05.jpg') }}" alt="7月活动" width="1171" height="126" border="0" usemap="#Map2" title="7月活动"/>
        <map name="Map2">
          <area shape="rect" coords="138,49,288,102" href="{{ asset(path('_advertiserment_list')) }}" target="_blank">
          <area shape="rect" coords="300,47,448,102" href="{{ asset(path('_advertiserment_offer99')) }}" target="_blank">
          <area shape="rect" coords="759,13,867,41" href="javascript: rankTop();">
        </map>
        <img src="{{ asset('images/july/July_06.jpg') }}" width="1171" height="125" alt="7月活动" title="7月活动"/>
        <img src="{{ asset('images/july/July_07.jpg') }}" width="1171" height="125" alt="7月活动" title="7月活动"/>
    </div>
<div class="containerActivity"> 
        <div class="activityRank" id="rank">
            <h3><img src="{{ asset('images/july/rankTitle.jpg') }}" width="171" height="29" alt="7月任务大厅排名" title="7月任务大厅排名"/><span style="color:#1e4200;vertical-align: bottom;">(每天早上6:00更新排行榜)</span></h3>
            <div class="rankCon clearfix">
                <div class="rankList fl clearfix">
                    <div class="fl">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            {%if users.0 is defined %}
                            {% for user in users.0 %}
                            <tr {%if user.4 in [1, 3, 10, 50] %} class="red" {% endif %}> {# 1,3,10,50 is ranking number#}
                                <td width="30%">第{{ user.4}}名</td>
                                <td width="35%">{{ user.2[:3] }}**</td>
                                <td width="35%">获得{{ user.3 }}米粒</td>
                            </tr>
                            {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                    </div>
                    <div class="fl">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                          {%if users.1 is defined %}
                          {% for user in users.1 %}
                            <tr {%if user.4 == 100 %} class="red" {% endif %}> {# 100 is ranking number#}
                                <td width="30%">第{{ user.4}}名</td>
                                <td width="35%">{{ user.2[:3] }}**</td>
                                <td width="35%">获得{{ user.3 }}米粒</td>
                            </tr>
                          {% endfor %}
                          {% endif %}
                        </tbody>
                    </table>
                    </div>
                </div>
                <div class="rankReferBox fl">
                    <div class="rankReferWrapper">
                    <div class="rankRefer">
                        <table border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            {%if users.2 is defined %}
                            {% for user in users.2 %}
                            <tr class="red">
                                <td width="30%">第{{ user.4}}名</td>
                                <td width="35%">{{ user.2[:3] }}**</td>
                                <td width="35%">获得{{ user.3 }}米粒</td>
                            </tr>
                            {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                    </div>
                    {% if app.session.get('uid') %}
                    <div class="immediateMsg">
                        <p>您在{{ 'now'|date('H') }}时{{ 'now'|date('i') }}分的米粒数</p>
                        <div class="mlNum red">{{my_point}}</div>
                    </div>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
</div>
<script type="text/javascript">
(function() {
    jQuery(function($) {
        window.rankTop=function()
        {
            var rank = document.getElementById('rank');
            var top = document.body.scrollTop || document.documentElement.scrollTop;
            var rankTop = rank.offsetTop;
            var explorer = window.navigator.userAgent;
            if(document.body.scrollTop){
                document.body.scrollTop = rankTop;
            }else{
                document.documentElement.scrollTop = rankTop;
            }
            if(explorer.indexOf('Chrome')>=0){
                document.body.scrollTop = rankTop;
            }
            if(explorer.indexOf('MSIE 7.0')>=0){
                rank.style.position = 'relative';
                rankTop = rank.offsetTop;
                document.documentElement.scrollTop = rankTop;
            }
        }
    });
})();

</script>

{% include '::analytics_js.html.twig' %} 
</body>
</html>
