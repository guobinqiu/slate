{% set flashbag = app.session.flashbag.all %}
{% if flashbag is not empty %}
    <div class="messages-container">
    {% for type, messages in flashbag %}
        {% for message in messages %}
             <div class="alert alert-{{ type }}">
                 {{ message }}
             </div>
        {% endfor %}
    {% endfor %}
    </div>
{% endif %}

<form action="{{ path('jili_api_monthactivity_gatheringsavetaobaoorder') }}" method="POST">
    {{ form_label(form.orderIdentity)}}
    {{ form_widget(form.orderIdentity)}}
    {{ form_errors(form.orderIdentity)}}

    {{ form_rest(form)}}
