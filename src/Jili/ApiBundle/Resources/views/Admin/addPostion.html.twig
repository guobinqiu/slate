<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=gb2312">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
	$("#searchs").hide();
	{% if code==1 %}
       $("#searchs").show();
	{% endif %}

	{% if codeflag==4 %}
    $("#searchs").show();
	{% endif %}
});
</script>
</HEAD>
<BODY>
<form action="{{ path('_admin_addPostion') }}" method="post" id="form1">
<div id="searchs">
<table align='center'>
  <tr>
     <th>&nbsp;</th>
	<th>广告编号</th>
    <th>广告标题</th>
    <th>广告开始时间</th>
    <th>广告结束时间</th>
    <th>&nbsp;</th>
 </tr>
{% if adposition %}
     {% for item in adposition %}
     <tr>
     <td><input type="radio" name="ck" value="{{ item.id }}"></td>
      <td>{{ item.id }}</td>
       <td> {{ item.title}}</td> 
       <td>{{ item.startTime.date}}</td>
       <td>{{ item.endTime.date}} </td>
      </tr>     
     {% endfor %}
     <tr><td>&nbsp;</td><td><input type="submit" name="selected" value="选中广告"> </td></tr>
{% endif %}
</table>
</div>

<table align='center'>
<tr><td>&nbsp;</td><td>&nbsp;</td></tr>
<tr><td>&nbsp;</td><td>
        {% if codeflag==1 %}
        <font color='red'>都为必填项</font>
        {% elseif codeflag==2 %}
        <font color='red'>广告编号不存在</font>
        {% elseif codeflag==3 %}
        <font color='red'>位置序号已存在</font>
        {% elseif codeflag==4 %}
        <font color='red'>选择广告</font>
        {% elseif codeflag==5 %}
        <font color='red'>广告没检索到</font>
        {% else %}
        &nbsp;
        {% endif %}
</td></tr>
<tr height='60'><td align="right">广告标题:</td><td><input type="text" id="title" name="title" size='30' value="{% if ad_title %}{{ ad_title }}{% else %}{{ title }}{% endif %}"/>&nbsp;&nbsp;<input type="submit" id="but" name="search" value="检 索"></td></tr> 
<tr height='60'><td align="right">广告位置:</td><td>
<input type="radio" name="position" value="1"  {% if position==1 %} checked="checked" {% endif %}/>首页
<input type="radio" name="position" value="2"  {% if position==2 %} checked="checked" {% endif %}/>广告推荐
<input type="radio" name="position" value="3"  {% if position==3 %} checked="checked" {% endif %}/>广告不推荐
<input type="radio" name="position" value="4"  {% if position==4 %} checked="checked" {% endif %}/>购物推荐
<input type="radio" name="position" value="5"  {% if position==5 %} checked="checked" {% endif %}/>购物不推荐
</td></tr>

<tr height='60'><td align="right">广告位置序号:</td><td><input type="text" name="number" value="{{ number }}"  size='30' onkeyup="value=value.replace(/[^\d]/g,'') "onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,''))"/></td></tr>
<tr height='60'><td>&nbsp;</td><td><input type="submit" name="add" value="提 交"/></td></tr>
</table>
</form>
</BODY></HTML>


