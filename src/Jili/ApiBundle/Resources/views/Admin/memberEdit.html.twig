{% extends 'JiliBackendBundle::base.html.twig' %} 

{% block body %}
<form action="{{ path('_admin_member_edit')}}" method="post" id="form1">
    <table border="1px" cellspacing="0px" class="member_table list">
        <tr>
            <th>user id</th>
            <td width="350px;">{{ member.id }}&nbsp;
                <input type="hidden" id="id" name="user_id" value="{{ member.id }}">
            </td>
        </tr>
        <tr>
            <th>email</th>
            <td>{{ member.email }}&nbsp;</td>
        </tr>
        <tr>
            <th>nick</th>
            <td>
                <input type="text" id="email" name="nick" value="{% if nick %}{{ nick }}{% endif %}" size="20" /> &nbsp;</td>
        </tr>
        <tr>
            <th>tel</th>
            <td>
                <input type="text" id="email" name="tel" value="{% if tel %}{{ tel }}{% endif %}" size="20" />&nbsp;</td>
        </tr>
        <tr>
            <th>register date</th>
            <td>{{ member.registerDate is empty ? "" : member.registerDate|date("Y-m-d H:i:s") }}&nbsp;</td>
        </tr>
        <tr>
            <th>register complete date</th>
            <td>{{ member.registerCompleteDate is empty ? "" : member.registerCompleteDate|date("Y-m-d H:i:s") }}&nbsp;</td>
        </tr>
        <tr>
            <th>last login date</th>
            <td>{{ member.lastLoginDate is empty ? "" : member.lastLoginDate|date("Y-m-d H:i:s") }}&nbsp;</td>
        </tr>
        <tr>
            <th>points</th>
            <td>{{ member.points }}&nbsp;</td>
        </tr>
        <tr>
            <th>delete flag</th>
            <td>
                <input type="radio" name="delete_flag" value="0" {% if delete_flag !=1 %} checked="checked" {% endif %}>会员&nbsp;
                <input type="radio" name="delete_flag" value="1" {% if delete_flag==1 %} checked="checked" {% endif %}>注销</td>
        </tr>
        <tr>
            <th>delete_date</th>
            <td>{{ member.deleteDate is empty ? "" : member.deleteDate|date("Y-m-d H:i:s") }}&nbsp;</td>
        </tr>
    </table>
    {% if errorMessage %} {% for item in errorMessage %}
    <center>
        <font color='red'>{{ item }}</font>
    </center>
    {% endfor %} {% endif %}
    <input type="submit" id="edit" name="edit" value="更新" style="margin-left: 5%;" />

{% endblock %}

{% block extra_js %}
<script type="text/javascript">
$(document).ready(function(){
  $("#edit").click(function (){
      window.location.href="{{ path('_admin_member_edit') }}?user_id="+$('#id').val();
  })
});
</script>
{% endblock %}