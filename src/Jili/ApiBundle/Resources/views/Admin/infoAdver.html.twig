<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=gb2312">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<link href="{{ asset('css/pageNav.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
</HEAD>
<BODY>
<table align="center" width="1024">
    	<tr>
        	<th>广告标题</th>
            <th>广告截至时间</th>
            <th>广告图片</th>
            <th>广告类型</th>
            <th>操作</th>
            <th>状态</th>
        </tr>
        {% if pagination %}
         {% for item in pagination %}
        <tr>
          <td align="center">{{ item.title }} </td>
          <td align="center">{{ item.endTime.date | date('Y-m-d') }}</td>
          <td align="center"><img src="{{ asset(item.listImage)}}"/></td>
           <td align="center">
         {% if item.incentiveType==1 %}
         CPA
         {% else %}
         CPS
         {% endif %}
          </td>
          <td align="center"><a href="{{ path('_admin_editAdver',{'id':item.id}) }}">编辑</a>&nbsp;&nbsp;
          <a href="{{ path('_admin_delAdver',{'id':item.id}) }}" onclick="if (confirm('确定要删除吗？')) return true; else return false;">删除</a>
          &nbsp;&nbsp;<a href="{{ path('_admin_stopAdver',{'id':item.id}) }}" onclick="if (confirm('确定要停止吗？')) return true; else return false;">停止</a>
          </td>
           <td align="center">{% if date(item.endTime) < date() %} 已停止 {% else %} 投放中 {% endif %}</td>
        </tr>
         {% endfor %}
         {%  endif %}
    </table>
    {{ knp_pagination_render(pagination) }}

</BODY></HTML>


