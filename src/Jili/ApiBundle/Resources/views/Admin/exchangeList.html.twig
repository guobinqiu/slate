<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=utf8">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<link href="{{ asset('css/pageNav.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/lib/jquery-1.11.1.min.js')}}" type="text/javascript"></script>
<SCRIPT src="{{ asset('js/plugin/load.js')}}" type=text/javascript></SCRIPT>
<script src="{{ asset('js/plugin/My97DatePicker/WdatePicker.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/kindeditor/kindeditor.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function(){
  {% if exType == 0 %}
    $('#add').attr('disabled', 'disabled');
  {% endif %}
  $("#select").click(function (){
      window.location.href="{{ path('_admin_exchange_list') }}?start="+$('#start').val()+"&end="+$('#end').val()+"&exType="+$('#exchangeType').val();
  })
});
</script>
</HEAD>
<BODY>
<form action="{{ path('_admin_exchange_list')}}" method="post" id="form1"}} >
<table align="center" width="1024">
<tr><td colspan="12">&nbsp;</td></tr>
<tr><td colspan="12">&nbsp;</td></tr>
<!-- {{ start }}-->
<!-- {{ end }}-->
<tr><td colspan="12" align="center">
        兑换开始时间:<input id="start" name="start_time" value="{% if start is defined %}{{ start }}{% endif %}" size="18" maxlength="60" readonly="readonly" onClick="WdatePicker()"  class="Wdate" style="cursor:pointer"/>
        &nbsp;
        兑换结束时间:<input name="end_time" id="end" value="{% if end is defined %}{{ end }}{% endif %}" size="18" maxlength="60" readonly="readonly" onClick="WdatePicker()"  class="Wdate" style="cursor:pointer"/>&nbsp;
                    <select name="exchangeType" id="exchangeType">
                      <option value="0">全部</option>
                      {% for item in exchangeType %}
                       <option value="{{ item.id }}"  {% if item.id == exType %} selected = "selected" {% endif %}>{{ item.type }}</option>
                      {% endfor %}
                    </select>
<type type="hidden" id="hided" />
                    <input type="button" id="select" name="select" value="查 询"/>&nbsp;<input type="submit" id="add" name="add" value="导出兑换数据"/></td></tr>
<tr><td colspan="12">&nbsp;</td></tr>
    	<tr>
        	<th>exchangeAccount</th>
        	<th>oppositeAccount</th>
          <th>realName</th>
            <th>exchangeTime</th>
            <th>exchangePoint</th>
            <th>money</th>
            <th>type</th>
            <th>status</th>
            <th>completeTime</th>
            <th>identSuspicion</th>
            <th>ipSuspicion</th>
            <th>mobileSuspicion</th>
            <th>pwdSuspicion</th>
        </tr>

        {% if pagination is defined %}
         {% for item in pagination %}
        <tr>
          <td align="center">{{ item.email }}</td>
          <td align="center">{{ item.targetAccount }}</td>
          <td align="center">{{ item.realName }}</td>
          <td align="center">{{ item.exchangeDate.date | date('Y-m-d') }}</td>
          <td align="center">{{ item.targetPoint }} </td>

            {% if item.exType == 1 %}
                 <td align="center">{{ item.targetPoint }}</td>
            {% elseif item.exType == 2 %}
                 <td align="center">{{ item.exchangeItemNumber }}</td>
            {% elseif item.exType == 3 %}
                 <td align="center">{{ item.exchangeItemNumber }}</td>
            {% elseif item.exType == 4 %}
                 <td align="center">{{ item.exchangeItemNumber }}</td>
            {% else %}
            {% endif %}

            {% if item.exType == 1 %}
                 <td align="center">91wenwen</td>
            {% elseif item.exType == 2 %}
                 <td align="center">amazon</td>
            {% elseif item.exType == 3 %}
                 <td align="center">alipay</td>
            {% elseif item.exType == 4 %}
                 <td align="center">mobile</td>
           {% else %}
           {% endif %}

           <td align="center">{% if item.status==1 %}success{% elseif  item.status==2 %}fail{% else %}audit{% endif %}</td>
           <td align="center">{% if item.finishDate %}{{ item.finishDate.date | date('Y-m-d') }}{% endif %}</td>
           <td align="center">{{ item.ident  }}</td>
           <td align="center">{{ item.ip     }}</td>
           <td align="center">{{ item.mobile }}</td>
           <td align="center">{{ item.pwd    }}</td>
        </tr>
         {% endfor %}
         {% else %}
            <tr>
                <td>no data found</td>
            </tr>
         {%  endif %}
    </table></form>

        {% if pagination is defined %}
        <div class="pagnation-nav">
        {% if 0 < pages %}
                  <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page=1">首页</a>&nbsp;
                  {% if 1 < page %}
                  <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ page-1 }}">前一页</a>&nbsp;
                  {% endif %}


                  {{ page  }}&nbsp;

                  {% if 0 < pages - page  %}
                  <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ page+1 }}">后一页</a>&nbsp;
                  {% endif %}
                  <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ pages }}">末页</a>&nbsp;
        {% endif %}
        </div>
        {% endif %}


</BODY></HTML>


