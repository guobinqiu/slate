{% extends 'WenwenFrontendBundle:admin:base.html.twig' %} 

{% block body %}
<form action="{{ path('_admin_exchange_list')}}" method="post" id="form1">
    <div class="text-center search">
        <label for="start">兑换开始时间:</label>
        <input id="start" name="start_time" value="{% if start is defined %}{{ start }}{% endif %}" size="18" maxlength="60" readonly="readonly" onClick="WdatePicker()" class="Wdate" style="cursor:pointer" />
        <label for="end">兑换结束时间:</label>
        <input name="end_time" id="end" value="{% if end is defined %}{{ end }}{% endif %}" size="18" maxlength="60" readonly="readonly" onClick="WdatePicker()" class="Wdate" style="cursor:pointer" />
        <label for="exchangeType">兑换类型:</label>
        <select name="exchangeType" id="exchangeType">
            <option value="0">全部</option>
            {% for item in exchangeType %}
            <option value="{{ item.id }}" {% if item.id==exType %} selected="selected" {% endif %}>{{ item.type }}</option>
            {% endfor %}
        </select>
        <type type="hidden" id="hided" />
        <input class="btn btn-primary" type="button" id="select" name="select" value="查 询" />
        <input class="btn btn-primary" type="submit" id="add" name="add" value="导出兑换数据" />
    </div>
    <table class="list">
        <tr>
            <th>exchangeAccount</th>
            <th>oppositeAccount</th>
            <th>realName</th>
            <th>exchangeTime</th>
            <th>exchangePoint</th>
            <th>money</th>
            <th>type</th>
            <th>status</th>
            <th>completeTime</th>
            <th>identSuspicion</th>
            <th>ipSuspicion</th>
            <th>mobileSuspicion</th>
            <th>pwdSuspicion</th>
        </tr>
        {% if pagination is defined %} {% for item in pagination %}
        <tr>
            <td>{{ item.email }}</td>
            <td>{{ item.targetAccount }}</td>
            <td>{{ item.realName }}</td>
            <td>{{ item.exchangeDate.date | date('Y-m-d') }}</td>
            <td>{{ item.targetPoint }} </td>
            {% if item.exType == 1 %}
            <td>{{ item.targetPoint }}</td>
            {% elseif item.exType == 2 %}
            <td>{{ item.exchangeItemNumber }}</td>
            {% elseif item.exType == 3 %}
            <td>{{ item.exchangeItemNumber }}</td>
            {% elseif item.exType == 4 %}
            <td>{{ item.exchangeItemNumber }}</td>
            {% else %}
            <td></td>
            {% endif %} {% if item.exType == 1 %}
            <td>91wenwen</td>
            {% elseif item.exType == 2 %}
            <td>amazon</td>
            {% elseif item.exType == 3 %}
            <td>alipay</td>
            {% elseif item.exType == 4 %}
            <td>mobile</td>
            {% else %}
            <td></td>
            {% endif %}
            <td>{% if item.status==1 %}success{% elseif item.status==2 %}fail{% else %}audit{% endif %}</td>
            <td>{% if item.finishDate %}{{ item.finishDate.date | date('Y-m-d') }}{% endif %}</td>
            <td>{{ item.ident }}</td>
            <td>{{ item.ip }}</td>
            <td>{{ item.mobile }}</td>
            <td>{{ item.pwd }}</td>
        </tr>
        {% endfor %} {% else %}
        <tr>
            <td>no data found</td>
        </tr>
        {% endif %}
    </table>
</form>
{% if pagination is defined %}
<div class="pagnation-nav text-right tips">
    {% if 0 < pages %} 
        <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page=1">首页</a>&nbsp; 
        {% if 1 < page %} 
        <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ page-1 }}">前一页</a>&nbsp; 
        {% endif %} 
        {{ page }}&nbsp; 
        {% if 0 < pages - page %} 
        <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ page+1 }}">后一页</a>&nbsp; 
        {% endif %}
        <a href="{{ path('_admin_exchange_list') }}?start={{start}}&end={{end }}&exType={{ exType}}&page={{ pages }}">末页</a>&nbsp; 
    {% endif %}
</div>
{% endif %} 
{% endblock %} 

{% block extra_js %}
<script type="text/javascript">
$(document).ready(function() {
    {% if exType == 0 %}
    $('#add').attr('disabled', 'disabled'); 
    {% endif %}
    $("#select").click(function() {
        window.location.href = "{{ path('_admin_exchange_list') }}?start=" + $('#start').val() + "&end=" + $('#end').val() + "&exType=" + $('#exchangeType').val();
    })
});
</script>
{% endblock %}
