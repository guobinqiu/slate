<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=gb2312">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<LINK href="{{ asset('css/calendar.css')}}" type=text/css rel=stylesheet>
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<SCRIPT src="{{ asset('js/load.js')}}" type=text/javascript></SCRIPT>
<script src="{{ asset('js/My97DatePicker/WdatePicker.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/kindeditor/kindeditor.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function(){
    var type = "{{ adver.incentiveType }}";
    $(".cpaReward").hide();
    $(".cpsReward").hide();
    if(type == 1){
        $(".cpaReward").show();
        $(".cpsReward").hide();
    }
    if(type == 2){
        $(".cpsReward").show();
        $(".cpaReward").hide();
    }
});

KE.show({
    id : 'info'
});
KE.show({
    id : 'rule'
});
function ck(){
    var cate = $("input[name='category']:checked").val();
    if(cate==1){
        $(".cpaReward").show();
        $(".cpsReward").hide();
    }
    if(cate==2){
        $(".cpsReward").show();
        $(".cpaReward").hide();
    }
}
</script>
</HEAD>
<BODY>
<form action="{{ path('_admin_editAdver',{'id':adver.id}) }}" method="post" id="form1" {{ form_enctype(form) }} >
<table align='center'>
<tr><td>&nbsp;</td><td>&nbsp;</td></tr>
<tr><td>&nbsp;</td><td>
    {% if code %}
        <font color='red'>{{ code }}</font>
    {% else %}
        {% if codeflag==1 %}
        <font color='red'>都为必填项</font>
        {% else %}
        &nbsp;
        {% endif %}
    {% endif %}
</td></tr>
<tr><td>广告标题:</td><td><input type="text" name="title" size='60' value="{% if title %} {{ title }} {% else %} {{ adver.title  }} {% endif %}"/></td></tr>
<tr><td>广告有效期:</td><td><input name="start_time" value="{% if start_time %} {{ start_time }} {% else %} {{ adver.startTime.date | date('Y-m-d') }} {% endif %}" size="26" maxlength="60" readonly="readonly" onClick="WdatePicker()"  class="Wdate" style="cursor:pointer"/>
&nbsp;到&nbsp;<input name="end_time" value="{% if end_time %} {{ end_time }} {% else %} {{ adver.endTime.date | date('Y-m-d') }} {% endif %}" size="26" maxlength="60" readonly="readonly" onClick="WdatePicker()"  class="Wdate" style="cursor:pointer"/></td></tr>
<tr><td>广告描述:</td><td><textarea cols="60" rows="5" name="comment">{% if comment %} {{ comment }} {% else %} {{ adver.decription }} {% endif %}</textarea></td></tr>
<tr><td>广告说明:</td><td><textarea id="info" cols="120" rows="10" name="info" style="width:700px;height:300px;">{% if info %} {{ info }} {% else %} {{ adver.content }} {% endif %}</textarea></td></tr>
<tr><td>广告链接:</td><td><input type="text" name="url" size='60' value="{% if url %} {{ url }} {% else %} {{ adver.imageurl }} {% endif %}"/></td></tr>
<tr><td>广告类型:</td><td><input type="radio" name="category" value="1" onchange="ck();" {% if adver.incentiveType==1 %} checked="checked" {% endif %}/>CPA
<input type="radio" name="category" value="2" onchange="ck();" {% if adver.incentiveType==2 %} checked="checked" {% endif %}/>CPS</td></tr>

<tr class="cpaReward"><td>广告积分:</td><td><input type="text" name="score" size='10' onkeyup="value=value.replace(/[^\d]/g,'') "onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,''))" value="{{ adver.incentive }}"/></td></tr>

<tr class="cpsReward"><td>佣金:</td><td><input type="text" name="intReward" size='10' value="{{ adver.incentiveRate }}"/>%</td></tr>
<tr class="cpsReward"><td>返利:</td><td><input type="text" name="rewardRate" size='10' value="{{ adver.rewardRate }}"/>%</td></tr>
<tr class="cpsReward"><td>广告分类名:</td><td>
{% for item in actCategory %}
<input type="checkbox"  name="type[]" value="{{ item.id }}" {% if newType %}{% for i in newType %} {% if i ==item.id %} checked = "checked" {% endif %}{% endfor %}{% endif %}>{{ item.category }}
{% endfor %}
</td></tr>

<tr><td>广告规则:</td><td><textarea id="rule" cols="120" rows="10" name="rule" style="width:700px;height:300px;">{% if rule %} {{ rule }} {% else %} {{ adver.info }} {% endif %}</textarea></td></tr>
<tr><td>广告图片:(300X250)</td><td><img src="{{ asset(adver.iconImage) }}"/>{{ form_widget(form.large) }}(不传为原来的图片)</td></tr>
<tr><td>广告图片:(200X130)</td><td><img src="{{ asset(adver.listImage) }}"/>{{ form_widget(form.small) }}(不传为原来的图片)</td></tr>
<tr><td>&nbsp;</td><td><input type="submit" name="add" value="提 交"/></td></tr>
</table>
</form>
</BODY></HTML>


