	<tr><td>&nbsp;</td><td>&nbsp;</td></tr>
	<tr><td></td><td><input type="button" value='清除' onclick="aa()";><input type="button" value='提交' onclick="sendContent()" ></td></tr>
 </table>
 </form>
 

