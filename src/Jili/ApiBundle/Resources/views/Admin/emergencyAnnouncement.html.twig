<script type="text/javascript">
function aa(){
	$("#content").val("");
}
function sendContent(){
    $.ajax({  
        url: "{{ path('_admin_saveEmergencyAnnouncement') }}?content="+encodeURIComponent($("#content").val()),
        type: "POST",
        success:function(data){
           if(data==1){
        	   alert('提交成功');
               $("#content").val("");
           }else{
        	   alert('提交失败');
           }
        }
      });
}
</script>
</HEAD>
<BODY>
<form  method="post" action="{{ path('_admin_emergencyAnnouncement')}}">
