{% extends 'WenwenFrontendBundle:admin:base.html.twig' %} 

{% block body %}
<table class="list">
    <tr>
        <th>公告标题</th>
        <th>公告作者</th>
        <th>发表时间</th>
        <th>公告分类</th>
        <!--  <th>公告内容</th>-->
        <th>操作</th>
    </tr>
    {% if pagination %} {% for item in pagination %}
    <tr>
        <td>{{ item.title }} </td>
        <td>{{ item.author }} </td>
        <td>{{ item.startTime.date | date('Y-m-d') }}</td>
        <td>{{ item.categoryName }}</td>
        <td><a href="{{ path('_admin_editCallboard',{'id':item.id}) }}">编辑</a>&nbsp;&nbsp;
            <a href="{{ path('_admin_delCallboard',{'id':item.id}) }}" onclick="if (confirm('确定要删除吗？')) return true; else return false;">删除</a>
        </td>
    </tr>
    {% endfor %} {% endif %}
</table>
<div class="autoCenter">
{{ knp_pagination_render(pagination) }}
</div>

{% endblock %}


