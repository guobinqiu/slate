{% extends 'JiliBackendBundle::base.html.twig' %} 

{% block body %}
<table align="center" width="1024" class="list">
    <tr>
        <th>公告标题</th>
        <th>公告作者</th>
        <th>发表时间</th>
        <th>公告分类</th>
        <!--  <th>公告内容</th>-->
        <th>操作</th>
    </tr>
    {% if pagination %} {% for item in pagination %}
    <tr>
        <td align="center">{{ item.title }} </td>
        <td align="center">{{ item.author }} </td>
        <td align="center">{{ item.startTime.date | date('Y-m-d') }}</td>
        <td align="center">{{ item.categoryName }}</td>
        <td align="center"><a href="{{ path('_admin_editCallboard',{'id':item.id}) }}">编辑</a>&nbsp;&nbsp;
            <a href="{{ path('_admin_delCallboard',{'id':item.id}) }}" onclick="if (confirm('确定要删除吗？')) return true; else return false;">删除</a>
        </td>
    </tr>
    {% endfor %} {% endif %}
</table>
{{ knp_pagination_render(pagination) }}

{% endblock %}


