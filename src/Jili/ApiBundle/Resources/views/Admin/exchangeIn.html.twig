{% extends 'JiliBackendBundle::base.html.twig' %} 

{% block body %}
<form action="{{ path('_admin_exchangeIn') }}" method="post" id="form1" enctype="multipart/form-data">
    <table align='center'>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>csv导入:
                <select name="exchangeType" id="exchangeType">
                    {% for item in exchangeType %}
                    <option value="{{ item.id }}" {% if item.id==exType %} selected="selected" {% endif %}>{{ item.type }}</option>
                    {% endfor %}
                </select>
                <input type="file" name="csv" />
            </td>
            <td>
                <input id="submit" type="submit" name="add" value="提 交" />
            </td>
        </tr>
        {% if success == 1 %}
        <center>
            <font color='blue'>数据插入成功</font>
        </center>
        {% elseif success == 2 %}
        <center>
            <font color='red'>请上传csv文件</font>
        </center>
        {% elseif success == 3 %}
        <center>
            <font color='red'>csv文件格式不对</font>
        </center>
        {% elseif success == 4 %}
        <center>
            <font color='red'>csv文件内容不对</font>
        </center>
        {% if error_info is defined %} {% for error in error_info %}
        <tr>
            <td>{{ error }}</td>
        </tr>
        {% endfor %} {% endif %} {% endif %}
    </table>
</form>
{% endblock %} 

{% block extra_js %}
<script type="text/javascript">
$(document).ready(function() {
    console.log("ooooooooooooo");
    function check() {
        alert("确认提交吗？")
        document.getElementById("submit").disabled = 'disabled';
        return false;
    }
    $("#form1").submit( function () {
        check();
    } );
});
</script>
{% endblock %}
