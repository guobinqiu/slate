<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=gb2312">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<link href="{{ asset('css/pageNav.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/lib/jquery-1.11.1.min.js')}}" type="text/javascript"></script>
</HEAD>
<BODY>
<table align="center" width="1024">
    	<tr>
        	<th>广告标题</th>
            <th>广告图片</th>
            <th>广告位置</th>
            <th>广告位置序号</th>
            <th>操作</th>
        </tr>
        {% if pagination %}
         {% for item in pagination %}
        <tr>
          <td align="center">{{ item.title }} </td>
          <td align="center"><img src="{{ asset(item.listImage)}}"/></td>
           <td align="center">
           {% if item.type ==1 %} 首页 
           {% elseif item.type ==2  %} 广告推荐 
           {% elseif item.type ==3  %} 广告不推荐 
           {% elseif item.type ==4  %} 购物推荐 
           {% elseif item.type ==5  %} 购物不推荐 
           {% else %} {% endif %}  
            </td>
            <td align="center">{{ item.position }} </td>
          
          <td align="center"><a href="{{ path('_admin_editPostion',{'id':item.aid}) }}">编辑</a>
          <a href="{{ path('_admin_delAdPosition',{'id':item.aid}) }}" onclick="if (confirm('确定要删除吗？')) return true; else return false;">删除</a>
          </td>
        </tr>
         {% endfor %}
         {%  endif %}
    </table>
    {{ knp_pagination_render(pagination) }}

</BODY></HTML>


