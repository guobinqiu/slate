<script type="text/javascript">
$(function(){
	$("#spans").hide();
	$("#sames").hide();
});
function check(){
	var pwd_filter = /^[0-9A-Za-z_]{6,20}$/;
	if(!pwd_filter.test($("#pwd").val())){
	    $("#pwdError").addClass('error');
	    $("#spans").show();
	    $("#pwdError").focus();
	    return false;
	}else{
		$("#pwdError").removeClass('error');
    	$("#pwdError").addClass('succeed');
    	$("#spans").hide();
    	if( $("#pwd").val() !=  $("#newPwd").val()){
    		$("#newPwdError").addClass('error');
    		$("#sames").show();
    		$("#newPwdError").focus();
    		return false;
    	}else{
    	    $("#form1").submit();
    		//$(".message").show();
    		//$("#pwd").val('');
    		//$("#newPwd").val('');
    	}
		
	}
}

</script>
<body>
{% include 'JiliApiBundle::header.html.twig' %}
<div class="webArticle password">
  <article>
     <form action="{{ path('_user_resetPass',{'code':pwdcode.code,'id':user.id }) }}" method="post" name="form1" id="form1" >
    <div class="form">
      <h2>输入邮箱地址 > <span>重置密码</h2>
      {%  if codeflag==1 %}
          <div class="message"><img src="{{ asset('images/succeed.jpg')}}" width="39" height="44">密码修改成功！</div>
      {% endif %}
      <ul class="activate">
        <li>
          <dd>请输入新密码：</dd>
          <dt id="pwdError">
            <input name="pwd" id="pwd" type="password" onblur='return check();'><font>&nbsp;</font>
            <br />
            <span id="spans">2-12个字符，不能含特殊符号</span></dt>
        </li>
        <li>
          <dd>请再次输入新密码：</dd>
          <dt id="newPwdError">
            <input name="newPwd" id="newPwd"  type="password" onblur='return check();'><font>&nbsp;</font>
             <br />
            <span id="sames">2次密码不相同</span></dt>
        </li>
        <li>
          <dd></dd>
          <dt><a class="saveBtn" href="javascript:void(0);" onclick='return check();'>保存设置</a></dt>
        </li>
      </ul>
      <div class="clear"></div>
    </div></form>
  </article>
