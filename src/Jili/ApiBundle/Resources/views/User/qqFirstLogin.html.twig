                            <li><label for="qqEmail">邮箱地址：</label><input id="email" name="qqEmail" class="qqEmail" type="text" value="{{ email }}"/>@qq.com<strong class="errorMsg" id="emailError">输入的错误信息好多啊</strong></li>
                            <li><label for="setPwd">设置密码：</label><input name="setPwd" type="password"/></li>
                            <li><input type="checkbox" checked/>下次自动登录</li>
                            <li><span class="submitBtn" id='info'>完善资料</span><span id='reg' class="submitBtn">立即登录</span></li>
                        </ul>
                        </form>
                        {# else bind jili id#}
                        <span class="Jl">已有积粒网账号</span>
                        <form action="{{ path('qq_bind') }}" method="post" name="form2" id="form2" >
