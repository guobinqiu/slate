<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>积粒网-QQ注册</title>
        {% include 'JiliApiBundle::seo.html.twig' %}
        <!-- [if lt IE9] -->
        <script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
        <!-- [endif] -->
        <link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/aside.css')}}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/regStep.css')}}" rel="stylesheet" type="text/css" />
        <script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
        <script src="{{ asset('js/banner.js')}}" type="text/javascript"></script>
    </head>
    <body>
        {% include 'JiliApiBundle::userHead.html.twig' %}
        <div class="webArticle regStep">
            <article>
                <div class="regForm" style="padding-top:100px;">
                    <h2><img src="{{ asset('images/quickLogin.gif')}}" alt="快速注册"><span>输入邮箱地址</span></h2>
                    <ul class="form">
                        {# if( newregist )#}
                        没有jili账号，输入邮箱注册
                        <form action="{{ path('qq_registe') }}" method="post" name="form1" id="form1" >
                            <div> 昵称：{{ nickname }}</div>
                            <div> 性别：{{ sex }}</div>
                            <li><dd>邮件地址：</dd><dt><input name="email" type="text" class="text" id="email" value="{{ email }}"><br />
                            <span id="emailError">
                            </span>
                            </dt></li>
                            <li><dd></dd><dt><!--  <a class="regBtn" href="#">发送验证邮件</a>-->
                            <input type='button' id='info' class='regBtn' value='完善资料'/>
                            <input type='button' id='reg' class='regBtn' value='立即登陆'/>
                            </dt></li>
                        </form>
                            <br />
                            已有jili账号，绑定账号
                            {# else bind jili id#}
                        <form action="{{ path('qq_bind') }}" method="post" name="form2" id="form2" >
                            <li><dd>邮件地址：</dd><dt><input name="email" type="text" class="text" id="email" value="{{ email }}"><br />
                            <span id="emailError">
                            </span>
                            </dt></li>
                        <li><dd>密码：</dd><dt><input name="nick" type="text" class="text" id="nick" value="{{ pwd }}"><br />
                        <span id="nickError">
                            {% if 1 %}
                                {# if code_nick #}
                                <font color='red'>{# code_nick #}</font>
                            {% else %}2-20个字符
                                {% endif %}
                        </span>
                        <input type='button' id='bind' class='regBtn' value='立即绑定'/>
                        </dt></li>
                        </form>
                                {#endif#}
                    </ul>
                    <div class="clear"></div>
                </div>
            </article>
        </div>
        {% include 'JiliApiBundle::userFoot.html.twig' %}
    </body>
    <script type="text/javascript">
        function refresh() {
            document.getElementById("verificationImg").src = '{{  path('_user_captcha') }}?r=' + 100000 * Math.random();
        }
        $(document).ready(function () {
            $("#reg").click(function () {
                $("#form1").submit();
            });
            $("#bind").click(function () {
                $("#form2").submit();
            });
        });

    </script>
</html>

