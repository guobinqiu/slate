<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title></title>
<!-- [if lt IE9] -->
<script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
<!-- [endif] -->
<link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/personal.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.j')}}" type="text/javascript"></script>
<script src="{{ asset('js/personal.js')}}" type="text/javascript"></script>
</head>
<body>
{% include 'JiliApiBundle::header.html.twig' %}
<div class="personal">
  <section>
    <h3>头像</h3>
    <div class="photo">
    	<div class="img">
        	<img src='{{ asset(user.path) }}'/>
        </div>
        <form action="{{ path('_user_upload',{'id':user.id}) }}" method="post" {{ form_enctype(form) }}>
        <p>欢迎您,{{ user.nick }}&nbsp;我的积分：<span>{{ user.points }}</span></p>
        <p>{{ form_widget(form.attachment) }}<input type="submit" class="upload" value="上传头像" /></p>
        <!-- <a class="upload" href="">上传头像</a> -->
        </form>
        <div class="clear"></div>
    </div>
  </section>

  {% if user.flag == '1' %}
   <section>
    <h3>个人信息<a class="close">关闭</a><a class="open" style="display:none;">打开</a></h3>
    <div class="content info">
      <a class="edit" href="#">修改 »</a>
      <ul>
        <li>
          <dd>登录账号：</dd>
          <dt>{{ user.email }} </dt>
        </li>
        <li>
          <dd>昵  称：</dd>
          <dt>{{ user.nick }}</dt>
        </li>
        <li>
          <dd>性  别：</dd>
          <dt>{{ user.sex }}</dt>
        </li>
        <li>
          <dd>生  日：</dd>
          <dt>{{ user.birthday }}
          </dt>
        </li>
        <li>
          <dd>手机号码：</dd>
          <dt>
            {{ user.tel }}
          </dt>
        </li>  
        <li>
          <dd>兴趣爱好：</dd>       
            音乐 
            美食</dt>
        </li>
       
      </ul>
    </div>
  </section>
  
  {% else %}
  {% include 'JiliApiBundle:User:update.html.twig' %}
 
  
  {% endif %}
 
  <section>
    <h3>我的广告体验<a class="close">关闭</a><a class="open" style="display:none;">打开</a></h3>
    <div class="content ad">
      <div class="selectTable">
      	<a href="#" class="hover">我正在体验的广告</a><a href="#">未体验（6）</a><a href="#">一共（{{ adtaste.0.num }}条信息）</a>
      </div>
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th>广告名称</th>
          <th>已获得积分</th>
          <th>下线日期</th>
          <th>最后更新时间</th>
          <th>体验进度</th>
          <th>领取奖励</th>
        </tr>
         {% for item in adtaste %}
        <tr>
          <td>{{ item.title }} </td>
          <td>60</td>
          <td>长期</td>
          <td>{{ item.time.date  }}</td>
          <td></td>
          <td>领取奖励</td>
        </tr>
         {% endfor %}
      </table>
     <center><p><a href="{{ path('_user_adtaste',{'id':user.id}) }}">更多</a></p></center>
    </div>
  </section>
  <section>
    <h3>我的兑换历史<a class="close">关闭</a><a class="open" style="display:none;">打开</a></h3>
    <div class="content score">
    	<table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th>兑换时间</th>
          <th>兑换方式</th>
          <th>兑换数量</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
        {% for item in exchange %}
        <tr>
          <td>{{ item.exchangeDate.date }}</td>
          <td>{{ item.type }}</td>
          <td>50元</td>
          <td>兑换成功</td>
          <td></td>
        </tr>
        {% endfor %}
      </table>
      <center><p><a href="{{ path('_user_exchange',{'id':user.id}) }}">更多</a></p></center>
    </div>
  </section>
  <section>
    <h3>账户扩展<a class="close">关闭</a><a class="open" style="display:none;">打开</a></h3>
    <div class="content expand">
    	内容
    </div>
  </section>
</div>
{% include 'JiliApiBundle::footer.html.twig' %}
</body>
</html>