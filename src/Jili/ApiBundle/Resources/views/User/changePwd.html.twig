<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title>积粒网-修改密码</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<!-- [if lt IE9] -->
<script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
<!-- [endif] -->
<link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/password.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/banner.js')}}" type="text/javascript"></script>
</head>
<script type="text/javascript">
function check(){
	$("#form1").submit();
}

</script>
<body>
{% include 'JiliApiBundle::header.html.twig' %}
<div class="webArticle password">
  <article>
    <form action="{{ path('_user_changePwd') }}" method="post" name="form1" id="form1" >
    <div class="form">
      <h2>修改密码</h2>
      {% if codeflag == 1 %}
      <div class="message"><img src="{{ asset('images/succeed.jpg')}}" width="39" height="44">{{ code }}</div>
      {% endif %}
      <ul class="activate">
        <li>
          <dd>请输入旧密码：</dd>
          {% if codeflag == 2 %}
                  <dt id="oldPwdError" class="error">
                    <input name="oldPwd" id="oldPwd" type="password" class="password"><font>&nbsp;</font>
                     <br />
                    <span>{{ code }}</span></dt>
            {% elseif codeflag == 6  %}
                    <dt id="oldPwdError" class="error">
                    <input name="oldPwd" id="oldPwd" type="password" class="password"><font>&nbsp;</font>
                    <br />
                    <span>{{ code }}</span></dt>
            {% else %}
                    <dt id="oldPwdError">
                    <input name="oldPwd" id="oldPwd" type="password" class="password"><font>&nbsp;</font>
            {% endif %}
        </li>
        <li>
          <dd>请输入新密码：</dd>
          {% if codeflag == 3 %}
          <dt id="pwdError" class="error">
            <input name="pwd" id="pwd" type="password" class="password"><font>&nbsp;</font>
            <br />
            <span>{{ code }}</span></dt>
            {% elseif codeflag == 5 %}
             <dt id="pwdError" class="error">
            <input name="pwd" id="pwd" type="password" class="password"><font>&nbsp;</font>
            <br />
            <span>{{ code }}</span></dt>
            {% else %}
             <dt id="pwdError">
            <input name="pwd" id="pwd" type="password" class="password"><font>&nbsp;</font>
           </dt>
            {% endif %}
        </li>
        <li>
          <dd>请再次输入新密码：</dd>
           {% if codeflag == 4 %}
          <dt id="newPwdError" class="error">
            <input name="newPwd" id="newPwd" type="password" class="password">
             <br />
            <span>{{ code }}</span></dt>
            {% else %}
             <dt id="newPwdError">
            <input name="newPwd" id="newPwd" type="password" class="password">
           </dt>
           {% endif %}
        </li>
        <li>
          <dd></dd>
          <dt><a class="saveBtn" href="javascript:void(0);" onclick="check();">保存设置</a> 
          </dt>
        </li>
      </ul>
      <div class="clear"></div>
    </div>
    </form>
  </article>
</div>
{% include 'JiliApiBundle::footer.html.twig' %}
</body>
</html>