{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}积粒网-商家活动{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/cpsActivity.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascript %}
<script src="{{ asset('js/cpsActivity.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
  var url = window.location.href;
  url = url.split("businessActivity/index/");
  if(url[1]){
    id = url[1].split("/");
    $('.tags a').removeClass("hover");
    $('.btags a').removeClass("hover");
    $('#mall'+id[0]).addClass("hover");
    $('#cate'+id[1]).addClass("hover");
  }
 {% if aid == 0 %}
    $('#mall').addClass("hover");
 {% endif %}
 {% if cateId == 0 %}
    $('#cate').addClass("hover");
 {% endif %}
});
</script>
{% endblock %}

{% block body %}
<div class="webArticle cpsActivity">
  <div class="topBtn"><a href="#"><img src="{{ asset('images/topBtn.jpg') }}" width="34" height="32"></a></div>
  <div class="classify">
      <h3>分类筛选</h3>
        <div class="classify-nav"><h4>商城：</h4><span class="tags">
      <a href="{{ path('_businessActivity_index',{'aid': 0 ,'cateId' : cateId }) }}" class="hover" id="mall">全部</a>
      {% for item in nowMall %}
          <a href="{{ path('_businessActivity_index',{'aid': item.aid ,'cateId' : cateId }) }}" id="mall{{ item.aid }}">{{ item.title }}</a>
      {% endfor %}
        <a class="unfoldBtn" style="display:none;">展开</a> 
</span></div><div class="classify-nav"><h4>类别：</h4><span class="btags">
        <a href="{{ path('_businessActivity_index',{'aid': aid ,'cateId' : 0 }) }}" class="hover" id="cate">全部</a>
      {% for item in cate %}
          <a href="{{ path('_businessActivity_index',{'aid': aid ,'cateId' : item.id }) }}" id="cate{{ item.id }}">{{ item.category }}</a>
      {% endfor %}
      <a class="bunfoldBtn" style="display:none;">展开</a> 
</span></div>
    </div>
    <div class="activityOverflow">
        <ul class="activityAll">
        {% for item in busi %}
             {% if date(item.startTime) < date() and  date(item.endTime) > date() %}
                 <li><img src="{{ asset(item.activityImage) }}" width="470" height="200"><div class="more"><h4>{{ item.businessName }}</h4><a class="moreBtn" href="{{ path('_businessActivity_info',{'id': item.id }) }}" target="_blank">查看详情>></a></div></li>
            {% endif %}
         {% endfor %}
        </ul>
        <!--<div class="loading"><img src="{{ asset('images/loading.gif') }}" width="48" height="48"></div>-->
    </div>
</div>
{% endblock %}