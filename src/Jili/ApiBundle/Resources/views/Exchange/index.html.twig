{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}积粒网-兑换中心{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/exchange.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascript %}
<script type="text/javascript">
$(document).ready(function(){
    $("#amazonBtn").click(function(){
        return false;
        $('#exchangeForm').attr("action", "{{ path('_exchange_amazonInfo') }}");
        $("#exchangeForm").submit();
    });
    $("#alipayBtn").click(function(){
        alipayClick();
    });
    $("#mobileBtn").click(function(){
        $('#exchangeForm').attr("action", "{{ path('_exchange_mobileInfo') }}");
        $("#exchangeForm").submit();
    });
    $("#flowBtn").click(function(){
        $('#exchangeForm').attr("action", "{{ path('_exchange_flowInfo') }}");
        $("#exchangeForm").submit();
    });
});
function alipayClick(){
    $.ajax({
          url: "{{ path('_exchange_issetIdent') }}",
          post: "GET",
          success:function(data){
              if(data==1){
                $('#exchangeForm').attr("action", "{{ path('_exchange_alipayInfo') }}");
                $("#exchangeForm").submit();
              }else{
                $('#exchangeForm').attr("action", "{{ path('_exchange_identityCardComfirm',{'type': 'alipay'}) }}");
                $("#exchangeForm").submit();
              }
          }
        });
}
</script>
{% endblock %}

{% block body %}
<div class="main w1000">
    <div class="exchangeV2">
        <form method="post" name="exchangeForm" id="exchangeForm">
        <ul class="clearfix">
            <li>
                <div class="clearfix">
                    <div class="pic">
                        <img src="{{asset('images/exchange/mobile.png')}}" alt="示意图"/>
                    </div>
                    <dl>
                        <dt>手机充值</dt>
                        <dd class="text">用积分为手机充值，<strong>2010米粒</strong>起兑</dd>
                        <dd class="exchangeBtn">
                            <span id="mobileBtn">立即兑换</span>
                        </dd>
                    </dl>
                </div>
            </li>
            <li>
                <div class="clearfix">
                    <div class="pic">
                        <img src="{{asset('images/exchange/alipay.png')}}" alt="示意图"/>
                    </div>
                    <dl>
                        <dt>支付宝现金兑换</dt>
                        <dd class="text">用积分兑换支付宝现金，<strong>2050米粒</strong>起兑</dd>
                        <dd class="exchangeBtn">
                            <span id="alipayBtn">立即兑换</span>
                        </dd>
                    </dl>
                </div>
            </li>
            <li>
                <div class="clearfix">
                    <div class="pic">
                        <img src="{{asset('images/exchange/flow.png')}}" alt="示意图"/>
                    </div>
                    <dl>
                        <dt>上网流量包兑换</dt>
                        <dd class="text">用积分兑换上网流量包，电信、联通<strong>1590米粒</strong>起兑，移动<strong>1660米粒</strong>起兑</dd>
                        <dd class="exchangeBtn">
                            <span id="flowBtn">立即兑换</span>
                        </dd>
                    </dl>
                    <span class="newIcon"></span>
                </div>
            </li>
            <li>
                <div class="clearfix">
                    <div class="pic">
                        <img src="{{asset('images/exchange/amazon.png')}}" alt="示意图"/>
                    </div>
                    <dl>
                        <dt>亚马逊礼品卡兑换</dt>
                        <dd class="text">用积分兑换亚马逊礼品卡，<strong>2000米粒</strong>起兑</dd>
                        <dd class="exchangeBtn">
                            <span class="disabled" id="amazonBtn">暂时关闭</span>
                        </dd>
                    </dl>
                </div>
            </li>
        </ul>
        <input type="hidden" value="btn" name="btn">
        <input type="hidden" value="{{ key }}" name="tokenKey" />
        </form>
        <div class="viewLink">
            <a class="historyExchange" href="{{ path('_user_exchange',{'type':0, 'exchangeType':1}) }}">查看我的兑换历史>></a>
        </div>
    </div>
</div>
{% endblock %} 