<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title>积粒网-体验广告</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<!-- [if lt IE9] -->
<script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
<!-- [endif] -->
<link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/aside.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/adListNew.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/pageNav.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/banner.js')}}" type="text/javascript"></script>
</head>
<body>
{% include 'JiliApiBundle::header.html.twig' %}

<div class="webArticle adList">
  <article>
    <h2><img src="images/adTitle.jpg" width="149" height="19"></h2>
    <iframe src='http://www.offer-wow.com/affiliate/wall/open.do?websiteid=1162&styleIndex=1&memberid={{  app.session.get('uid') }}' style='width:720px;height:560px;' scrolling='no' frameborder='no' border='0' allowTransparency='true'></iframe>
  </article>
  <aside>
    <div class="cpaMain">
        <div class="cpaAll">

     {% for item in ads %}
            <div class="cpa{{ loop.last ? ' last' : '' }}">
              <dd><a href="{{ path('_advertiserment_index',{'id':item.id}) }}"><img src="{{ asset(item.listImage) }}" width="100px" height="60px" ></a></dd>

                      {% if item.incentiveType==1 %}
                         <dt>+{{ item.incentive }}<br />米粒<br/>
                        {% elseif item.incentiveType==2 %}
                         <dt>{{ item.incentiveRate/10000 }}%<br />最高获消费额<br/>
                         {% else %}
                     {% endif %}
              <a class="joinBtn" href="{{ path('_advertiserment_index',{'id':item.id}) }}">马上参与</a></dt>
              <a href="{{ path('_advertiserment_index',{'id':item.id}) }}" class="title">{{ item.title  }}</a>
            </div>
     {% endfor %}
        </div>
    </div>
  </aside>
</div>
{% include 'JiliApiBundle::footer.html.twig' %}
</body>
</html>
