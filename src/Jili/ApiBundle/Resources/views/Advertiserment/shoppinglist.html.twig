<!doctype html>
<html>
<head>
<meta charset="UTF-8" />
<title>积粒网-购物返利</title>
{% include 'JiliApiBundle::seo.html.twig' %}
<!-- [if lt IE9] -->
<script src="{{ asset('js/html5.js')}}" type="text/javascript"></script>
<!-- [endif] -->
<link href="{{ asset('css/default.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/aside.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/shopList.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/pageNav.css')}}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/jquery-1.7.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/banner.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/shopList.js')}}" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
    {% if id == 0 %}
        $('#cate').addClass("hover");
    {% else %}
        $('.classify-nav a').removeClass("hover");
        $('#cate'+{{ id }}).addClass("hover");
    {% endif %}
});
function goto(aid){
	{% if uid %}
         var w = window.open("","_blank");
    	  $.ajax({
        		url: "{{ path('_advertiserment_click') }}?id="+aid,
        		post: "GET",
        		success:function(data){
            		if(data==1){
            			$.ajax({
            	      		url: "{{ path('_shopping_info') }}?aid="+aid,
            	      		post: "GET",
            	      		success:function(data){
            	      			w.location.href = data;
            	      		}
            	      	});
            		} else if(data==0) {
                		window.location.href="{{ path('_user_login') }}";
                		w.close();
            		}else{
           			w.close();
                	}
        		},
    		    error:function(){
    		       w.close();
    			 }
        	});
	{% else %}
           window.location.href="{{ path('_user_login') }}";
	{% endif %}
	 
}
</script>
</head>
<body>
{% include 'JiliApiBundle::header.html.twig' %}
<div class="webArticle shopList">
  <article>
<h2><img src="{{ asset('images/shopTitle.jpg')}}" width="150" height="19" alt="购物返利"></h2>
    <div class="classify-nav">
            <a id="cate" class="hover" href="{{ path('_shopping_list') }}">全部</a>
            {% for item in cate %}
             <a href="{{ path('_shopping_list',{'id' : item.id }) }}" id="cate{{ item.id }}">{{ item.category }}</a>
            {% endfor %}  
    </div>

    <div class="shopRebate">
     {% for item in pagination %}
      <div class="s_box"><img src="{{ asset(item.listImage) }}" width="100" height="65" alt="{{item.title}}">
        <p class="store">{{ item.title  }}</p>
         {% if item.incentiveType==1 %}
                <p class="rebate"><em>{{ item.incentive }}米粒</em></p>
         {% elseif item.incentiveType==2 %}
                <p class="rebate">最高返<em>{{ item.reward_rate}}%</em></p>
          {% else %}
         {% endif %}
        <div class="hover">
         	<div class="tr"><div class="img"><a href="{{ path('_advertiserment_index',{'id':item.id}) }}"><img src="{{ asset(item.listImage) }}" width="60" height="39" alt="{{item.title}}"></a></div>
         	         {% if item.incentiveType==1 %}
                             <div class="text">{{ item.incentive }}米粒</div>
                        {% elseif item.incentiveType==2 %}
                            <div class="text">最高返<br>
                            <em>{{ item.reward_rate }}%</em></div>
                         {% else %}
                     {% endif %}
             </div>
          <p><a class="btnDetail" href="{{ path('_advertiserment_index',{'id':item.id}) }}">返现详情</a>
              <a class="btnShopping" onclick="goto({{ item.id }});" href="javascript:void(0);">直接购物</a></p>
              <p><em>{{ count_of_ad_joined[item.id ] is defined ? count_of_ad_joined[item.id ] : 0 }}</em>人已参加</p>
        </div>
      </div>
     
    {% endfor %} </div>
     
     <div style="display: inline-block; width: 99%;">
    {# display navigation #}

   {{ knp_pagination_render(pagination) }}
   </div>
  </article>

  <aside style="margin-top:0;">
  {{  render(controller("JiliApiBundle:Shopping:recommend" ) ) }}
  </aside>
</div>
{% include 'JiliApiBundle::footer.html.twig' %}
</body>
</html>
