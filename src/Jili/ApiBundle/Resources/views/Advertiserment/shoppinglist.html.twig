<script type="text/javascript">
function goto(aid){
	{% if uid %}
         var w = window.open("","_blank");
    	  $.ajax({
        		url: "{{ path('_advertiserment_click') }}?id="+aid,
        		post: "GET",
        		success:function(data){
            		if(data==1){
            			$.ajax({
            	      		url: "{{ path('_shopping_info') }}?aid="+aid,
            	      		post: "GET",
            	      		success:function(data){
            	      			w.location.href = data;
            	      		}
            	      	});
            		} else if(data==0) {
                		window.location.href="{{ path('_user_login') }}";
                		w.close();
            		}else{
           			w.close();
                	}
        		},
    		    error:function(){
    		       w.close();
    			 }
        	});
	{% else %}
           window.location.href="{{ path('_user_login') }}";
	{% endif %}
	 
}
</script>
