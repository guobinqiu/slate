{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}
    {% if advertiserment.incentiveType==2 %}
      <title>积粒网-购物返利</title>
    {% else %}
      <title>积粒网-体验广告</title>
    {% endif %}
{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/adMore.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascript %}
<script type="text/javascript">
function gotoad(){
	if($('#uid').val()==''){
		window.location.href="{{ path('_user_login') }}";
	}else{
		var w = window.open("","_blank");
	  	  $.ajax({
	      		url: "{{ path('_advertiserment_click') }}?id="+$('#aid').val(),
	      		post: "GET",
	      		success:function(data){
	          		if(data==1){
	          			w.location.href="{{ adwurl | raw }}";
	          		} else if(data==0) {
	              		window.location.href="{{ path('_user_login') }}";
	              		w.close();
	          		}else{
	         			w.close();
	              	}
	      		},
			    error:function(){
			       w.close();
				 }
	      	});
		}
}
</script>
{% endblock %}

{% block body %}
<div class="webArticle adInfo adMore">
  <article>
      <div class="top">
  	<div class="actionTitle">
    	<h1>{{ advertiserment.title }}</h1>
        <p><span>截止日期：</span>
            {{ advertiserment.endTime.date | date("Y-m-d") }}
</p>
		<p>
		{% if advertiserment.incentiveType==1 %}<span>任务奖励：</span>
		        {{  advertiserment.incentive }}米粒
		{% elseif advertiserment.incentiveType==2 %}<span>购物返利：</span>
		       最高获消费额{{ reward_rate }}%的米粒
		{% elseif advertiserment.incentiveType==18 %}<span>购物返利：</span>
		       最高获消费额{{ reward_rate }}%的米粒
		{% else %}
		{% endif %}
		</p>
      {% if code==1 %}
          {% if orderStatus %}
	            {% if orderStatus==1 %}
	           <span class="getBtn"> <img src="{{ asset('images/endBtn.jpg')}}" /></span>
                 {% elseif orderStatus==2 %}
                  <span class="getBtn"> <img src="{{ asset('images/oncheckBtn.jpg')}}" /></span> 
                 {% elseif orderStatus==3 %}
               <span class="getBtn"> <img src="{{ asset('images/finishBtn.jpg')}}" /> </span>                                                
                 {% elseif orderStatus==4 %} 
                  <span class="getBtn">  <img src="{{ asset('images/unpassBtn.jpg')}}" /></span>                                                       
                 {% else %}                                                       
	             {% endif %}
           {% else %}
                <span class="getBtn"> <img src="{{ asset('images/endBtn.jpg')}}" /> </span> 
           {% endif %}                        
      {% else %}
          {% if advertiserment.incentiveType==2 %}
              <a class="getBtn" id="getTask" onclick="gotoad();"><img src="{{ asset('images/buyBtn.jpg')}}" /></a></span>
          {% else %}
              {% if orderStatus %}      
                  {% if orderStatus==1 %}
                  <a href="javascript:void(0);" class="getBtn"  onclick="gotoad();"><img src="{{ asset('images/continueBtn.jpg')}}" /></a> 
                  {% elseif orderStatus==2 %}
                     <span class="getBtn"><img src="{{ asset('images/oncheckBtn.jpg')}}" />
                     </span>  
                       {% elseif orderStatus==3 %}
                     <span class="getBtn"><img src="{{ asset('images/finishBtn.jpg')}}" />
                     </span>  
                        {% elseif orderStatus==4 %} 
                    <span class="getBtn"><img src="{{ asset('images/unpassBtn.jpg')}}" />
                    </span>  
                        {% else %}                                                                                               
                     {% endif %}               
                {% else %}        
                       <a class="getBtn" id="getTask" onclick="gotoad();"><img src="{{ asset('images/getBtn.jpg')}}" /></a>
                     </span>
               {% endif %}
          {% endif %}   
      {% endif %}
  </div>
  </div>
    <div class="rule">
    	<h2>活动规则</h2>
        <div class="article">
        	{{ advertiserment.info | raw  }}
        </div>
    </div>
    <div class="explain">
    	<h2>活动说明</h2>
        <div class="article">
       	  <div class="img">
       	  <img src="{{ asset(advertiserment.iconImage) }}" >
       	  </div>
        	<p>{{ advertiserment.content | raw }}</p>
      </div>
    </div>
    <input type="hidden" value="{{ id }}" id="aid"/>
     <input type="hidden" value="{{ uid }}" id="uid"/>
     <div class="bottom"></div>
  </article>
{% endblock %}

