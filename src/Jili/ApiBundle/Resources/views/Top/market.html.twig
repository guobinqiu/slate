<div class="shopActList">
    {% for item in market %}
    <div class="shopActItem">
        <div class="shopActImg"><a href="{{ path('_checkin_location') }}?markid={{ item.id }}&type=2" target="_blank"><img src="{{ asset(item.activityImage) }}" width="420" height="168" alt="{{ item.businessName }}" title="{{ item.businessName }}"/></a></div>
        <div class="shopActInfo">
            <p class="tit">
            	<span class="tt">{{ item.title }}</span>
            	<span class="rebate"><span></span>最高返2.94%</span>
            </p>
            <p class="businessName"><a href="{{ path('_checkin_location') }}?markid={{ item.id }}&type=2" target="_blank" title="{{ item.businessName}}">{{ item.businessName}}</a></p>
            <p class="dis">{{ item.activityDescription}}</p>
            <p class="link">
            	<span class="publicAttention">{{ item.click}}</span>
                <!--<span class="linkBtn"><a href="{{ path('_checkin_location') }}?markid={{ item.id }}&type=2" target="_blank" title="去看看">去看看<span class="arrow"></span></a></span>-->
        	</p>
        </div>
    </div>
    {% endfor %}
</div>