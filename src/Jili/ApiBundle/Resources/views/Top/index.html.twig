        {{ render(controller('JiliApiBundle:Top:myTask' ) ) }}
      </div><!-- eof .mask -->
    </div><!-- eof #task -->
    {% endif %}

    <div id="getMallList">
        {{ render(controller('JiliEmarBundle:Websites:hot' , { 'max': 12, 'tmpl': 'top' } ) ) }}
    </div><!-- eof getMallList -->
    
