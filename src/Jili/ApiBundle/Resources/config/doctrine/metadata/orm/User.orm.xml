<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nick" type="string" column="nick" length="45" nullable="true"/>
    <field name="pwd" type="string" column="pwd" length="45" nullable="true"/>
    <field name="sex" type="integer" column="sex" nullable="true"/>
    <field name="birthday" type="datetime" column="birthday" nullable="true"/>
    <field name="email" type="string" column="email" length="45" nullable="true"/>
    <field name="isEmailConfirmed" type="string" column="is_email_confirmed" length="45" nullable="true"/>
    <field name="tel" type="string" column="tel" length="45" nullable="true"/>
    <field name="isTelConfirmed" type="string" column="is_tel_confirmed" length="45" nullable="true"/>
    <field name="city" type="string" column="city" length="45" nullable="true"/>
    <field name="identityNum" type="string" column="identity_num" length="40" nullable="true"/>
    <field name="registerDate" type="datetime" column="register_date" nullable="true"/>
    <field name="lastLoginDate" type="datetime" column="last_login_date" nullable="true"/>
    <field name="lastLoginIp" type="string" column="last_login_ip" length="45" nullable="true"/>
    <field name="points" type="string" column="points" length="45" nullable="true"/>
    <field name="deleteFlag" type="integer" column="delete_flag" nullable="true"/>
  </entity>
</doctrine-mapping>
