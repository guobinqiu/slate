{% extends 'WenwenFrontendBundle:admin:base.html.twig' %} 

{% block title %} {{ parent() }} - Panel Search {% endblock %} 

{% block body%}
<form action="{{ path('_edm_unsubscribe_list')}}" method="post" id="form1">
    <div class="text-center search">
        <label for="email">email:</label>
        <input id="email" type="text" id="email" name="email" value="{% if email is defined %}{{ email }}{% endif %}" size="30" />
        <input class="btn btn-primary" type="button" id="select" name="select" value="查 询" />
    </div>
</form>
<table class="list">
    <tr>
        <th>user_id</th>
        <th>email</th>
        <th>unsubscribe time</th>
    </tr>
    {% for item in userEdms %}
    <tr>
        <td>{{item.userId}}</td>
        <td style="padding:0 20px;">{{item.email}}</td>
        <td>{{item.createdTime|date("Y-m-d H:i:s")}}</td>
    </tr>
    {% endfor %}
</table>

{% endblock %}

{% block extra_js %}
<script language="JavaScript">
$(document).ready(function(){
  $("#select").click(function (){
      window.location.href="{{ path('_edm_unsubscribe_list') }}?email="+$('#email').val();
  })
});
</script>
{% endblock %}