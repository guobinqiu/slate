{% extends "JiliBackendBundle::base.html.twig"%}

{% block title %}
Taobao订单列表-12月活动-{{ parent() }}
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/pageNav.css')}}" type="text/css" rel="stylesheet">
{% endblock %}


{% block body %}

{% include("JiliBackendBundle:GameEggsBreaker/TaobaoOrder:filter_menu.html.twig") %}

<h3 align="center">Taobao订单</h3>

{% include("JiliBackendBundle::session_notification.html.twig") %}

<table align="center" width="700">
<tr>
<th>用户Email</th>
<th>提交日期</th>
<th>订单号</th>
<th>订单日期</th>
<th>订单金额</th>
<th>审核进度:审核结果\操作</th>
</tr>
{% for entity in entities %}
    <tr>
        <td>{{ entity.email}}</td>
        <td>{{ entity[0].createdAt|date('Y-m-d')}}</td>
        <td>{{ entity[0].orderId }}</td>
        <td>{{ entity[0].orderAt|date('Y-m-d') }}</td>
        <td>{{ entity[0].orderPaid|number_format(2,'.',',' )}}</td>
        <td>
{% if entity[0].isAuditCompleted or  entity[0].isAuditPending %}
    {% if entity[0].isAuditCompleted %}
    结束
    {% elseif entity[0].isAuditPending %}
    等待
    {% endif %}
            {% if entity[0].isValid %}
            :有效
            {% elseif entity[0].isInvalid %}
            :无效
            {% elseif entity[0].isUncertain%}
            :不确定
            {% endif %}

{% else %}
<a href="{{ path( 'jili_backend_decemberactivity_audit', {'id': entity[0].id })  }}">审核</a>

{% endif %}
        </td>
    </tr>

{% endfor %}
</table>

