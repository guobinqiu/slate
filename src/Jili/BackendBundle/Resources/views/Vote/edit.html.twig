{% extends '::adminBase.html.twig' %}

{% block title %}
{{ parent() }} - vote 管理- create/edit
{% endblock %}

{% block stylesheets %}
{{parent() }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/My97DatePicker/WdatePicker.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/kindeditor/kindeditor.js')}}" type="text/javascript"></script>
{% endblock %}

{% block body%}

{% form_theme form 'form_table_layout.html.twig' %}

<form action="{{ path('_admin_vote_edit_confirm') }}" method="post" id="form1" {{ form_enctype(form) }}>
{{form_widget(form.id)}}
    <table align='center'>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>{{form_label(form.startTime)}}</td>
            <td>{{ form_widget(form.startTime , {'attr': {'class':'Wdate', 'onClick':'WdatePicker()','style':'cursor:pointer' }}) }}</td>
        </tr>
        <tr>
            <td>{{form_label(form.endTime)}}</td>
            <td>{{ form_widget(form.endTime , {'attr': {'class':'Wdate', 'onClick':'WdatePicker()','style':'cursor:pointer' }}) }}</td>
        </tr>
        <tr>
            <td>{{form_label(form.pointValue)}}</td>
            <td>{{ form_widget(form.pointValue) }}</td>
        </tr>
        <tr>
            <td>{{form_label(form.title)}}</td>
            <td>{{ form_widget(form.title) }}</td>
        </tr>
        <tr>
            <td>{{form_label(form.description)}}</td>
            <td>{{ form_widget(form.description) }}</td>
        </tr>
        <tr>
            <td>{{form_label(form.voteImage)}}</td>
            <td>{{ form_widget(form.voteImage) }}</td>
        </tr>
        {% for voteChoice in form.voteChoices %}
            <tr><td>{{ form_row(voteChoice.name, {'label': 'Choice_'~loop.index})}}</td></tr>
        {% endfor %}
        {{ form_widget(form._token) }}

        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="create" /></td>
        </tr>
    </table>
    {% if error_meeeages is defined %}
    {% for error_meeeage in error_meeeages %}
     <center><font color='red'>{{ error_meeeage }}</font></center>
    {% endfor %}
    {%endif%}
</form>
{% endblock %}
