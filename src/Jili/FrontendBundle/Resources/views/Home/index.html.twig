{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}{{ parent()  }} {% endblock %}

{% block stylesheet %}
{% endblock %}

{% block javascript %}
<script src="{{ asset('js1408/jquery.cookie.js') }}" type="application/javascript"></script>
<script src="{{ asset('js1408/jl.ui.home.js') }}" language="javascript"></script>
<script src="{{ asset('js1408/jl.ui.countdown.js') }}" language="javascript"></script>
{% endblock %}
 
{% block body %}
<div class="main w1000 clearfix" style="margin-top: -10px;">
    <div class="mainCon fnLeft ">
        <div class="focusPic">
            {{ render(controller('JiliApiBundle:Top:advertiseBanner' ) ) }}
        </div>
        <div class="adTop">
            {{ render(controller('JiliFrontendBundle:Home:adExperience' ) ) }}
        </div>
        <div class="hotShops mt10">
            {{ render(controller('JiliEmarBundle:Websites:hot' , { 'max': 24, 'tmpl': 'top' } ) ) }}{# 返利商城 #}
        </div>
        <div class="shopAct shadowGlob">
            <div class="clearfix"><h2 class="fnLeft">热门商家活动</h2><a href="{{ path('_marketActivity_index')}}" class="more fnRight">更多>></a></div>
            {{ render(controller('JiliApiBundle:Top:market' ) ) }}{# 商家活动 #}
        </div>
    </div>
    <div class="rightSider fnRight">
        {% if not app.session.has('uid') %}
        <div class="loginArea">
            <a href="{{ path('_user_reg') }}" title="免费注册" class="register">免费注册</a>
            <div class="ttLink mt20"><span>--------------------</span><a class="fontYH font16" href="{{ path('_user_login') }}" title="直接登录">直接登录</a><span>--------------------</span></div>
            <div class="quickLog lightGray mt5"> 
                用第三方账号快速登录：<a href="{{ path('qq_api_login') }}" class="logIcon" title="用第三方账号快速登录"></a>
            </div>
        </div>
        {% else %}
            {{ render(controller('JiliApiBundle:Top:userInfo' ) ) }}
        {% endif %}
        <div class="quickQ shadowGlob">
            {{ render(controller('JiliFrontendBundle:Home:vote' ) ) }}{# 快速问答#}
        </div>
        
        
        <div class="notice shadowGlob">
            <h2>最新公告</h2>
            {{ render(controller('JiliApiBundle:Top:callboard' ) ) }}
            <div class="pageNumber"><a class="prevBtn curPt"></a><span></span><a class="nextBtn curPt"></a></div>
        </div>
        <div class="topiTaobao mt10">
            <a href="http://ai.taobao.com/?pid=mm_49376465_4372428_25658343" target="_blank"><img src="/images1408/aitaobaoBN.jpg" width="270" height="250" /></a>
        </div>
	{% include "JiliFrontendBundle::alimama.html.twig" with { pid:"mm_49376465_4372428_25660341" } %}
        <div class="mt10" style="background: none; padding-left: 0; padding-bottom: 0;">
        	<!-- 首页 右侧一 标签云（改） -->
        	{% include "JiliApiBundle:Ads:cpro_baidu.html.twig" with { cpro_id:"u1650575" } %}
        </div>
        <div class="timeline mt10 shadowGlob">
            <h2>最新动态</h2>
            {{ render(controller('JiliApiBundle:Top:event') ) }}
        </div>
        <div class="rank mt10 shadowGlob">
        <h2>排行榜</h2>
        {{ render(controller('JiliApiBundle:Top:ranking' ) ) }}
        <div class="menu"><span class="month prevBtn active">月度</span><span class="year nextBtn">年度</span></div>
      </div>
    </div>
</div>
<div class="activityAdWrapper">
    <div class="activityAd">
        <div class="activityAdBg"></div>
        <span class="close"></span>
        <div class="btns">
            <a href="{{ path('jili_frontend_decemberactivity_index', {'l': 6}) }}" class="goBtn"></a>
            <span class="closeBtn"></span>
        </div>
        <div class="adMask"></div>
    </div>
</div>

{% if not app.session.has('uid') %}
<script>
	(function($){
		if(!$.cookie("fistShowAd")){
			$('.activityAd').show();
		}
		$.cookie("fistShowAd", true,{expires:1});
   	})(jQuery);
</script>
{% else %}
<script>
	(function($){
		$.ajax({
        	url: Routing.generate('jili_frontend_gameseeker_isadsvisit'),
            type: "GET",
            dataType: 'json',
            success: function(returnData){
				if(returnData.data.has_done){
					$('.activityAd').hide();
				}else{
					$('.activityAd').show();
				}
            },
            error: function(){
                console.log('请求错误');
            }
        });
   	})(jQuery);
</script>
{% endif %}
{% endblock %}

{% block body_bottom %}
{% if is_newbie_passed is defined  and is_newbie_passed == false  %}
{% include "JiliApiBundle:Top:newbie_partial.html.twig" %}
{% endif %}
{% endblock %}


