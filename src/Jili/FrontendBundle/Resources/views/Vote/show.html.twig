{% extends 'JiliFrontendBundle::base.html.twig' %}
{% block title %}{{ parent()  }} {% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/voteDetail.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block javascript %}
<script src="{{ asset('js/jquery.cookie.js') }}" type="application/javascript"></script>
<script src="{{ asset('js/jquery.infinitescroll.js')}}" type="text/javascript"></script>
{% endblock %}

{% block body %}
<div class="main-con w1000 clearfix">
    <div class="main-con-left left">
        <div class="vote vote-sub">
            <h1>{{vote.title}}<a href="{{ path('jili_frontend_vote_index') }}">返回快速问答一览</a></h1>
            <div class="relate">
                {% if vote_image_path %}
                <img src="{{ asset(vote_image_path)}}" alt="{{vote_image_path}}">
                {% else %}
                <img src="{{ asset('images/vote/no_image.jpg') }}" height="90" width="90">
                {% endif %}
                <div class="relate-text">
                    <div>时间：{{vote.startTime|date("m/d")}} ~ {{vote.endTime|date("m/d")}}</div>
                    <div class="description">
                        <b class="btn"></b>
                        <p class="">{% autoescape false %}{{ vote.description }}{% endautoescape %}</p>
                    </div>
                </div>
            </div>
            <form action="{{ path('jili_frontend_vote_vote') }}" method="post" name="form1" id="show_form" >
            <input type="hidden" value="{{ csrf_token }}" name="csrf_token" />
            <input type="hidden" value="{{ vote.id }}" name="id" />
            <div class="options">
                <ul>
                {% for key, voteChoice in voteChoices %}
                    <li>{% if user_answer_count==0 %}<input type="radio" name="answer_number" id="answer_number_{{key}}" value="{{key}}" />{% endif %}<span>{{key}}.{{voteChoice}}</span></li>
                {% endfor %}
                </ul>
                <div class="btn"><a href="{{ path('jili_frontend_vote_result',{'id':vote.id}) }}">仅查看结果>></a>
                {% if app.session.get('uid') %}
                    {% if user_answer_count==0 %}
                    <input type="submit" value="投  票" class="btn" />
                    {% endif %}
                {% else %}
                    <span><a href="{{ path('_user_login') }}">请登陆后</a>参加投票。</span>
                {% endif %}
                </div>
            </div>
            </form>
        </div>
    </div>
    {% include 'JiliFrontendBundle:Vote:vote_right.html.twig' %}
</div>
{% endblock %}

{% block body_bottom %}

{% endblock %}
