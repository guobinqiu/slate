<form action="{{ path('jili_frontend_decemberactivity_addtaobaoorder') }}" method="POST">
    <ul class="shoppingForm">
        <li>
        {{ form_label(form.orderAt,'购物时间：', {'id': 'datepicker'} ) }}
        {{ form_widget( form.orderAt, {'id':'datepicker','attr':{'value': '', 'class':'clearTxt'}} ) }}
        <span class="defaultTxt">yyyy-mm-dd</span>
        </li>
        <li>
        {{ form_label( form.orderId, '淘宝订单号：', {'id':'orderNum'} ) }}
        {{ form_widget(form.orderId , {'id':'orderNum','attr': {'value':'','class':'clearTxt'  }}) }}
        <span class="defaultTxt"></span>
        </li>
        {% set flashbag = app.session.flashbag.all %}
        {% if flashbag is not empty %}
            <li class="errorMsg">
                {% for type, messages in flashbag %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">
                            *您输入的日期不对哦{{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </li>
        {% endif %}
    </ul>
     {{ form_rest(form) }}
    <input type="submit" value="submit"  class="submitBtn"  style="border:0;" />
</form>
