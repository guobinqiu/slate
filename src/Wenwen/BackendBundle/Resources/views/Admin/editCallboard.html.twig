<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<META http-equiv=Content-Type content="text/html; charset=gb2312">
<LINK href="{{ asset('css/admin.css')}}" type="text/css" rel="stylesheet">
<LINK href="{{ asset('css/calendar.css')}}" type=text/css rel=stylesheet>
<SCRIPT src="{{ asset('js/plugin/load.js')}}" type=text/javascript></SCRIPT>
<script src="{{ asset('js/plugin/My97DatePicker/WdatePicker.js')}}" type="text/javascript"></script>
<script src="{{ asset('js/kindeditor/kindeditor.js')}}" type="text/javascript"></script>
<script type="text/javascript">
    KE.show({
        id : 'content'
    });
</script>
</HEAD>
<BODY>
<form action="{{ path('_admin_editCallboard',{'id':callboard.id}) }}" method="post" id="form1" >
<table align='center'>
<tr><td>&nbsp;</td><td>&nbsp;</td></tr>
<tr><td>&nbsp;</td><td> {% if codeflag==1 %}
        <font color='red'>都为必填项</font>
        {% else %}
        &nbsp;
        {% endif %}</td></tr>

<tr><td>公告标题:</td><td><input type="text" name="title" size='60' value="{{ callboard.title }}"/></td></tr>
<tr><td>公告作者:</td><td><input type="text" name="author" size='60' value="{{ callboard.author }}"/></td></tr>
<tr><td>发布时间:</td><td><input name="start_time" value="{{ callboard.startTime | date('Y-m-d') }}" size="26" maxlength="60" readonly="readonly" onClick="WdatePicker()"  class="Wdate" style="cursor:pointer"/></td></tr>

<tr><td>公告分类:</td><td>
	<select name="category">{% for item in cb_category %}<option value="{{ item.id }}" {% if callboard.cbType==item.id %} selected = "selected" {% endif%}>{{ item.categoryName }}</option>{% endfor %}</select>
</td></tr>

<tr><td>公告内容:</td><td><textarea id="content" cols="120" rows="10" name="content" style="width:700px;height:300px;">{{ callboard.content }}</textarea></td></tr>

<tr><td>&nbsp;</td><td><input type="submit" name="add" value="提 交"/></td></tr>
</table>
</form>
</BODY></HTML>


