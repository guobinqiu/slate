<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="app.http_client" class="Wenwen\FrontendBundle\ServiceDependency\HttpClient" />

        <service id="app.survey_service" class="Wenwen\FrontendBundle\Services\SurveyService">
            <argument type="service" id="logger" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="app.http_client" />
            <argument type="service" id="templating" />
        </service>

        <service id="app.parameter_service" class="Wenwen\FrontendBundle\Services\ParameterService">
            <argument type="service" id="service_container" />
        </service>

        <service id="app.listener.exception_listener" class="Wenwen\FrontendBundle\EventListener\ExceptionListener">
            <argument type="service" id="logger" />
            <argument type="service" id="templating" />
            <argument type="service" id="kernel" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <!--<tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />-->
            <!--<tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />-->
        </service>

        <service id="app.listener.console_exception_listener" class="Wenwen\FrontendBundle\EventListener\ConsoleExceptionListener">
            <argument type="service" id="logger" />
            <tag name="kernel.event_listener" event="console.exception" />
        </service>

        <service id="app.listener.user_authentication_listener" class="Wenwen\FrontendBundle\EventListener\UserAuthenticationListener">
            <argument type="service" id="router" />
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service id="app.offerwow_request_service" class="Wenwen\FrontendBundle\Services\OfferwowRequestService">
            <argument type="service" id="logger" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="app.latest_news_service" />
        </service>

        <service id="app.expire_point_service" class="Wenwen\FrontendBundle\Services\ExpirePointService">
            <argument type="service" id="logger" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="templating" />
        </service>

        <service id="app.user_service" class="Wenwen\FrontendBundle\Services\UserService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="snc_redis.default" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="logger" />
            <argument type="service" id="app.latest_news_service" />
        </service>

        <service id="app.latest_news_service" class="Wenwen\FrontendBundle\Services\LatestNewsService">
            <argument type="service" id="snc_redis.default" />
            <argument type="service" id="jms_serializer" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="logger" />
        </service>

        <service id="app.prize_item_service" class="Wenwen\FrontendBundle\Services\PrizeItemService">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
            <argument type="service" id="snc_redis.default" />
            <argument type="service" id="app.user_service" />
        </service>

        <service id="app.ip_location_service" class="Wenwen\FrontendBundle\Services\IpLocationService">
            <argument type="service" id="logger" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="app.parameter_service" />
            <argument type="service" id="app.http_client" />
        </service>

    </services>
</container>
