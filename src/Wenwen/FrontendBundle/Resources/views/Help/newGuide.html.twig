{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}新手上路{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/newGuide.css') }} " rel="stylesheet" type="text/css">
{% endblock %}
 
{% block header %}
{% include 'WenwenFrontendBundle:Components:_header.html.twig' %} 
{% endblock %}

{% block body %}
<div class="breadWrap">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="{{ path('help_help') }}">帮助中心</a></li>
                  <li class="breadcrumb-item active">新手上路</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container top20"> 
    <div class="main-help-con">
        <div class="newGuide newGuideBox clearfix">
            <div class="row">
                <div class="newGuide-item col-xs-12 col-sm-4">
                	<em><img src="{{ asset('img/help/icon01.png') }}" width="105" height="84" alt="问卷调查"/></em>
                    <dl>
                        <dt>问卷列表</dt>
                        <dd>动动手指，回答问卷，就能赚取积分！</dd>
                        <dd><a href="{{ path('help_newGuide_detail') }}#survey" class="more">快去了解</a></dd>
                    </dl>
                </div>
                <div class="newGuide-item col-xs-12 col-sm-4">
                	<em><img src="{{ asset('img/help/icon02.png') }}" width="105" height="84" alt="快速问答"/></em>
                    <dl>
                        <dt>快速问答</dt>
                        <dd>每日一答，由你做主，积分积少成多！</dd>
                        <dd><a href="{{ path('help_newGuide_detail') }}#vote" class="more">快去了解</a></dd>
                    </dl>
                </div>
                <div class="newGuide-item noBorder col-xs-12 col-sm-4">
                	<em><img src="{{ asset('img/help/icon04.png') }}" width="105" height="84" alt="任务体验"/></em>
                    <dl>
                        <dt>任务体验</dt>
                        <dd>各种体验，不同玩法，积分收入囊中！</dd>
                        <dd><a href="{{ path('help_newGuide_detail') }}#advertiserment" class="more">快去了解</a></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footer.html.twig' %} 
{% endblock %}
