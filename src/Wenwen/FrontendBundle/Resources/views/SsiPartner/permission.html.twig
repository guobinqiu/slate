              </ul>
              <form action="{{ path('_ssi_partner_commit') }}" method="post" id="ssi_permission_form">
                <div class="prmBtn">
                  <input type="image" alt="发送" src="{{ asset('img/questionnaire/send.jpg') }} "  />
