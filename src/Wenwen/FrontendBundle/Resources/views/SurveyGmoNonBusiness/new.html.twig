{% extends '::base.html.twig' %}

{% block body -%}
    <h1>新增</h1>

    <form class="form-horizontal" action="{{ path('gmo_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="form-group">
            {{ form_label(form.researchId, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.researchId) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.researchId) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.title, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.title) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.title) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.type, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.type) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.type) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.completePoint, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.completePoint) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.completePoint) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.screenoutPoint, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.screenoutPoint) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.screenoutPoint) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.quotafullPoint, null, {'label_attr': { 'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-9">
                {{ form_widget(form.quotafullPoint) }}
            </div>
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_errors(form.quotafullPoint) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button class="btn btn-primary" type="submit">保存</button>
                <a class="btn btn-default" href="{{ path('gmo') }}">返回</a>
            </div>
        </div>

        {{ form_row(form._token) }}
    </form>

{% endblock %}
