{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}登录{% endblock %}
{% block meta %}
<meta name="keywords" content="调查,调研,问卷,赚钱,在线样本服务,消费者调查" />
<meta name="description" content="每个人都是社会的决策者！欢迎来到91问问调查网。现在注册会员，在线参加全球市场调查，轻轻松松赢取现金,并用您的意见改变世界。另有任务体验让您乐赚不停；购物返利让你省得多，赚得也更多" />
<meta name="title" content="登录" />
{% endblock %}

{% block stylesheet %}
    <!-- pages css -->
    {% stylesheets filter="cssrewrite, scssphp, ?uglifycss" output="dist/css/frontend/login.css"
    	"assets/scss/frontend/component/quickLog.scss"
    	"assets/scss/frontend/component/lpBg.scss"
        "assets/scss/frontend/pages/user/login.scss"
    %}
        <link href="{{ asset_url }}" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
	<div class="pp-section">
		<nav class="navbar navbar-fixed-top">
        <div class="container">
          <div class="pull-left navbar-header">
            {% include "WenwenFrontendBundle:Components:_headerLogo.html.twig" %}
          </div>
          <a href="{{ path('_user_reg') }}" class="pull-right btn" type="button">注册</a>
        </div>
    </nav>
		<div class="section" id="section0">
			<div class="sectionCon center-block">
				<div class="container">
					<div class="LRWrap row">
						<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
						    <div class="login loginUq">
						        <div class="login-con logWrap">
									<form action="{{ path('_user_login') }}" method="post" name="form1" id="form1" novalidate="novalidate">
										<div class="error errorLogBack">{{ form_errors(form) }}</div>
										<ul>
											<li class="liner">
												{{ form_widget(form.email, {'attr': {'placeholder': '邮箱'}}) }}
												<div class="error">{{ form_errors(form.email) }}</div>
											</li>
											<li>
												{{ form_widget(form.password, {'attr': {'placeholder': '密码'}}) }}
												<div class="error">{{ form_errors(form.password) }}</div>
											</li>
										</ul>
										<div class="text-left checkbox rememberMe"><label for="login_remember_me" >{{ form_widget(form.remember_me) }}记住密码30天</label><a href="{{ path('_user_resetPwd') }}" class="pull-right">忘记密码？</a></div>
										{{ form_row(form.fingerprint) }}
										{{ form_row(form._token) }}
										<input type="submit" class="login-btn" value="登录"/>
						            </form>
						            <div class="login-btn-others">
						            	<p class="othersLine">快捷登录</p>
						                <p class="othersItem row">
											<span class="col-md-4 hidden-xs hidden-sm"><a class="weixin-login" href="{{ path('weixin_login') }}" title="使用微信账号登录"><i class="fa fa-weixin" aria-hidden="true"></i></a></span>
											<span class="col-md-4"><a class="qq-login" href="{{ path('qq_login') }}" title="使用QQ账号登录"><i class="fa fa-qq" aria-hidden="true"></i></a></span>
											<span class="col-md-4"><a class="weibo-login" href="{{ path('weibo_login') }}" title="使用新浪微博账号登录"><i class="fa fa-weibo" aria-hidden="true"></i></a></span>
										</p>
						            </div>
						        </div>
						    </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="contact">
		<a href="{{ path('help_cooperation') }}"><em></em>业务合作<b></b></a>
	</div>
{% endblock %}

{% block javascript %}
    <!-- pages js -->
    {% javascripts filter="?uglifyjs2" output="dist/js/frontend/login.js"
        "assets/js/common/plugin/jquery.html5-placeholder-shim.js"
        "assets/js/common/plugin/client.min.js"
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
		var client = new ClientJS(); // Create A New Client Object
		var fingerprint = client.getFingerprint(); // Calculate Device/Browser Fingerprint
		$('#login_fingerprint').val(fingerprint);
	</script>
{% endblock %}