	        <div class="container">
	        	<div class="row">
        			<div class="col-xs-12">
			        	<div class="navbar-header pull-left">
							<a class="navbar-brand" href="{{ path('_homepage') }}" title="91问问调查网">
								<img class="logo" src="{{ asset('img/common/logo.svg') }}" alt="91问问">
								<!--[if lt IE 9]>
									<img src="{{ asset('img/common/logo.png') }}" alt="91问问">
								<![endif]-->
			        		</a>
			        	</div>
						<a href="{{ path('_user_reg') }}" class="btn pull-right top17" type="button">注册</a>
					</div>
	        	</div>
			</div>
		</nav>
		<div class="section" id="section0">
			<div class="sectionCon">
				<div class="logIxWrap">
					<div class="container">
						<div class="row">
							<div class="col-md-8 col-md-offset-2">
							    <div class="login loginUq">
							        <div class="login-con logWrap">
										<form action="{{ path('_user_login') }}" method="post" name="form1" id="form1" novalidate="novalidate">
											<div class="error errorLogBack">{{ form_errors(form) }}</div>
											<ul>
												<li class="liner">
													{{ form_widget(form.email, {'attr': {'placeholder': '邮箱'}}) }}
													<div class="error">{{ form_errors(form.email) }}</div>
												</li>
												<li>
													{{ form_widget(form.password, {'attr': {'placeholder': '密码'}}) }}
													<div class="error">{{ form_errors(form.password) }}</div>
												</li>
											</ul>
											{{ form_row(form.fingerprint) }}
											{{ form_row(form._token) }}
											<input type="submit" class="login-btn" value="登录"/>
							            </form>
							            <p class="subCon"><a href="{{ path('_user_resetPwd') }}" class="spec">忘记密码？</a></p>
							            <div class="login-btn-others">
