{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}登录{% endblock %}
{% block meta %}
<meta name="keywords" content="调查,调研,问卷,赚钱,在线样本服务,消费者调查" />
<meta name="description" content="每个人都是社会的决策者！欢迎来到91问问调查网。现在注册会员，在线参加全球市场调查，轻轻松松赢取现金,并用您的意见改变世界。另有任务体验让您乐赚不停；购物返利让你省得多，赚得也更多" />
<meta name="title" content="登录" />
{% endblock %}

{% block stylesheet %}
	<link href="{{ asset('css/component/pagepiling.css') }}" rel="stylesheet" type="text/css">
	<link href="{{ asset('css/login.css') }} " rel="stylesheet" type="text/css">
	<style type="text/css">
		html,body{
			height: 100%;
			overflow: hidden;
			background: #262424;
		}
		@media only screen and (max-width: 667px) {
			html, body{
				overflow: auto!important;
				background: #3d5267!important;
			}
		}
	</style>
{% endblock %}

{% block body %}
	<div id="pagepiling">
