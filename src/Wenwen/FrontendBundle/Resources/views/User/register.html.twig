{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}用户注册：{{ parent() }} {% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/register.css') }} " rel="stylesheet" type="text/css">
{% endblock %}
 
{% block header %}
{% include 'WenwenFrontendBundle:Components:_headerSimple.html.twig' %} 
{% endblock %}

{% block body %}
<div class="main-con w1000">
	<div class="form main-register">
		<form action="{{ path('_user_reg') }}" name="signup_form" id="signup_form" method="post">
		<ul>
			<li>
			   {{ form_label(form.nickname ) }}
				<div>{{ form_widget(form.nickname ) }}
                  <span id="signup_nickname_succeed" class="succeed"></span>
                  <span id="signup_nickname_error" class="msg_normal">请输入您的昵称</span>
                   {{ form_errors(form.nickname) }}
                </div>
<!-- p '' -->
			</li>
			<li>
				{{ form_label(form.email) }}
				<div> {{ form_widget(form.email ) }}
                    <span id="signup_email_succeed" class="succeed"></span>
                    <span id="signup_email_error" class="msg_normal">输入有误</span>
                   {{ form_errors(form.email) }}
                </div>
			</li>
			<li>
				{{ form_label(form.password.first) }}
{# <input name="pwd" id="pwd" type="password"> #}
				<div>{{ form_widget(form.password.first)}}<span class="hide" id="pwdStrength"><em class="fl">安全程度：</em><b class="c1">弱</b><b>中</b><b>强</b></span><span id="signup_password_first_succeed" class="succeed"></span><span id="signup_password_first_error" class="msg"></span>
                   {{ form_errors(form.password.first) }}
                </div>
			</li>
			<li>
				{{ form_label(form.password.second) }}
				<div>{{ form_widget(form.password.second )}}<span id="signup_password_second_succeed" class="succeed"></span><span id="signup_password_second_error" class="msg"></span>
                   {{ form_errors(form.password.second) }}
                </div>
			</li>
			<li id="vcode">
				{{ form_label(form.captcha) }}
				<div>{{ form_widget(form.captcha) }}
				<!-- <img id="captcha" src="{{ asset('img/user/captcha.jpg') }}" alt="CAPTCHA Image" /> 
				<img id="verificationImg" class="verificationImg" name="captcha" onclick="this.src='{{  path('_user_captcha') }}?r='+100000*Math.random()" src="{{ path('_user_captcha') }}" />
				<img id="changeCode" src="{{ asset('img/user/change.png') }}" alt="换一张"/>
				<b>换一张</b>
-->
				<span id="signup_captcha_succeed" class="succeed"></span><span id="signup_captcha_error" class="msg"></span>
                    {{ form_errors(form.captcha) }}
                </div>
			</li>
			<li>
				<div class="subscribe">{{ form_widget(form.unsubscribe) }}{# <input type="checkbox" checked> #}我愿意接收91问问发出的会员邮件<div class="tips expand-btn">
					<b>?</b>
					<div class="tips-con expand-con"><p>91问问将为会员定期发出问卷提醒、活动邀请等会员专享服务，您也可以在邮箱内取消订阅。</p><b class="arrow"></b></div>
				</div></div>
				<div>{{ form_widget(form.agreement) }}{#<input type="checkbox"  id="readme" checked> #}我已阅读并接收<a href="" id="protocol">《会员协议》</a></div>
				<span id="protocol_error"></span>
			</li>
		</ul>
		<div class="main-register-btn"><span id="submit_button">注&nbsp;&nbsp;&nbsp;册</span><img src="{{ asset('img/user/regPoint.png') }}" alt="注册即送10积分"></div>

        {{ form_rest(form) }}
		</form>
		<div class="login-others">
			<p>用第三方账号登录：</p>
			<div class="login-others-btns"><a href="{{ path('weibo_api_login') }}"><img src="{{ asset('img/common/sina_logo.png') }}" alt="微博登录">微博登录</a><a href="{{ path('qq_api_login') }}"><img src="{{ asset('img/common/qq_logo.png') }}" alt="QQ登录">QQ登录</a></div>
		</div>
	</div>
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footerCopyright.html.twig' %} 
{% endblock %}

{% block javascript %}
<script type="text/javascript" src="{{ asset('js/lib/require.js')}}" defer async="true" data-main="{{ asset('js/app/user/register')}}"></script>
{% endblock %}
