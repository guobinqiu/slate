{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}用户注册：{{ parent() }} {% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/register.css') }} " rel="stylesheet" type="text/css">
<link href="{{ asset('css/component/quickLog.css') }} " rel="stylesheet" type="text/css">
{% endblock %}
 
{% block header %}
{% include 'WenwenFrontendBundle:Components:_headerSimple.html.twig' %} 
{% endblock %}

{% block body %}
<div class="main-con w1000">
	<div class="form main-register">
		<form action="{{ path('_user_reg') }}" name="signup_form" id="signup_form" method="post">
		<ul>
			<li>
			   {{ form_label(form.nickname ) }}
				<div>{{ form_widget(form.nickname ) }}
                  <span id="signup_nickname_succeed" class="succeed"></span>
                  <span id="signup_nickname_error" class="msg_normal">{{ form_errors(form.nickname) }}</span>
                </div>
			</li>
			<li>
				{{ form_label(form.email) }}
				<div> {{ form_widget(form.email ) }}
                    <span id="signup_email_succeed" class="succeed"></span>
                    <span id="signup_email_error" class="msg_normal">{{ form_errors(form.email) }}</span>
                </div>
			</li>
			<li>
				{{ form_label(form.password.first) }}
				<div>{{ form_widget(form.password.first)}}<span class="hide" id="pwdStrength"><em class="fl">安全程度：</em><b class="c1">弱</b><b>中</b><b>强</b></span><span id="signup_password_first_succeed" class="succeed"></span><span id="signup_password_first_error" class="msg">{{ form_errors(form.password.first) }}</span>
                </div>
			</li>
			<li>
				{{ form_label(form.password.second) }}
				<div>{{ form_widget(form.password.second )}}<span id="signup_password_second_succeed" class="succeed"></span><span id="signup_password_second_error" class="msg">{{ form_errors(form.password.second) }}</span>
                </div>
			</li>
			<li id="vcode">
				{{ form_label(form.captcha) }}
				<div>{{ form_widget(form.captcha) }}
				<span id="signup_captcha_succeed" class="succeed"></span><span id="signup_captcha_error" class="msg">{{ form_errors(form.captcha) }}</span>
                </div>
			</li>
			<li>
				<div class="subscribe">{{ form_widget(form.unsubscribe) }}我愿意接收91问问发出的会员邮件<div class="tips expand-btn">
					<b>?</b>
					<div class="tips-con expand-con"><p>91问问将为会员定期发出问卷提醒、活动邀请等会员专享服务，您也可以在邮箱内取消订阅。</p><b class="arrow"></b></div>
				</div></div>
				<div>{{ form_widget(form.agreement) }}我已阅读并接收<a href="{{ path('_default_about_regulations') }}" id="protocol" title="会员协议">《会员协议》</a></div>
				<span id="protocol_error"></span>
			</li>
		</ul>
		<div class="main-register-btn"><span id="submit_button" tabindex="0">注&nbsp;&nbsp;&nbsp;册</span><img src="{{ asset('img/user/regPoint.png') }}" alt="注册即送10积分"></div>
        {{ form_rest(form) }}
		</form>
		<div class="login-others">
			<p>用第三方账号登录：</p>
			<div class="login-others-btns"><a class="weibo-login"><img src="{{ asset('img/common/sina_logo.png') }}" alt="微博登录">微博登录</a><a class="qq-login"><img src="{{ asset('img/common/qq_logo.png') }}" alt="QQ登录">QQ登录</a></div>
		</div>
	</div>
	<div class="quickLogWrap w1000">
		<div class="quickLogPop qlpR" id="wbLogCon" style="display: none;">
			<div class="quickLCon">
				<div class="wbTit"><span class="wbIco"></span>微博登录提示<span class="closeBtn"></span></div>
				<div class="wbText">
					<p class="l1">微博登录现在仅<strong>对老用户开放</strong>，如果您是第一次在我站使用微博快捷登录，您将无法正常登录哟！</p>
					<p class="l2">如果您没有账号，请到当前页面进行正常的注册流程。我们的开发人员正在抓紧对此功能进行修复，感谢您的配合！</p>
				</div>
				<div class="wbBtnArea"><a class="cancelBtn">取消</a><a href="{{ path('weibo_api_login') }}" class="continueBtn">继续</a></div>
			</div>
		</div>
	</div>
	<div class="quickLogWrap w1000">
		<div class="quickLogPop qlpR" id="qqLogCon" style="display: none;">
			<div class="quickLCon">
				<div class="wbTit"><span class="qqIco"></span>QQ登录提示<span class="closeBtn"></span></div>
				<div class="wbText">
					<p class="l1">QQ登录现在仅<strong>对老用户开放</strong>，如果您是第一次在我站使用QQ快捷登录，您将无法正常登录哟！</p>
					<p class="l2">如果您没有账号，请到当前页面进行正常的注册流程。我们的开发人员正在抓紧对此功能进行修复，感谢您的配合！</p>
				</div>
				<div class="wbBtnArea"><a class="cancelBtn">取消</a><a href="{{ path('qq_api_login') }}" class="continueBtn">继续</a></div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footerCopyright.html.twig' %} 
{% endblock %}

{% block javascript %}
<script type="text/javascript" src="{{ asset('js/lib/require.js')}}" defer async="true" data-main="{{ asset('js/app/user/register')}}"></script>
{% endblock %}
