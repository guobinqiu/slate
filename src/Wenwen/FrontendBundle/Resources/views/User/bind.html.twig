{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}欢迎来到91问问{% endblock %}

{% block stylesheet %}
<link href="{{ asset('css/bind.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}
{{ include( 'WenwenFrontendBundle:Components:_headerSimple.html.twig', {'theme': '完善基本资料'} ) }}
{% endblock %}

{% block body %}
<div class="main-con w1000">
	<div class="form main-resetPwd clearfix">
		<div class="bindCon">
			<form action="{{ path(bind_route, {'openId': openId}) }}" method="POST" novalidate>
				{{ form_errors(form) }}
				<ul class="bindForm">
					<li class="liner">
						<div class="bindInput">
							{{ form_widget(form.email, {'attr': {'placeholder': '请输入邮箱'}}) }}
							<div class="error">{{ form_errors(form.email) }}</div>
						</div>
					</li>
					<li>
						<div class="bindInput">
							{{ form_widget(form.password, {'attr': {'placeholder': '请输入密码'}}) }}
							<div class="error">{{ form_errors(form.password) }}</div>
						</div>
					</li>
				</ul>
					{{ form_row(form._token) }}
				<input class="bindBtn" type="submit" value="已有绑定账号" />
				<input class="skipBtn" type="button" value="跳过这一步" />
				<div class="bindPrompt">
					<span class="prompt"><i class="fa fa-exclamation-circle" aria-hidden="true"></i>注意：跳过绑定以后，已有账号的用户所拥有的积分将不会累计到现在的账户。</span>
					<a href="{{ path(unbind_route, {'openId': openId}) }}"></a>
				</div>
			</form>
		</div>
		<div class="bindAvtWrap">
			<div class="bindAvtInner">
				<p>您好，{{ nickname }}，欢迎来到91问问</p>
				<p class="avtWrap"><img src="{{ asset(photo|default('img/common/default_tx.png')) }}" width="100" height="100" alt="头像" title="头像"></p>
			</div>
		</div>
		
	</div>
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footerCopyright.html.twig' %}
{% endblock %}

{% block javascript %}
<script type="text/javascript">
	$('.bindBtn').click(function(){
		// var clicks = $(this).data('clicks');
		if($('.bindForm').is(":hidden")){
			$('.bindForm').show();
			$('.bindBtn').val("点击绑定");
		}else{
			$('.bindBtn').unbind('click');	
		}
		return false;	
	});
</script>
{% endblock %}