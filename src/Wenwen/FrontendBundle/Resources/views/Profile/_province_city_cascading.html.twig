<label>居住地：</label>

<select id="province" name="front_user[userProfile][province]">
    <option value="">省、市</option>
    {% for province in provinces %}
        <option value="{{ province.id}}"{% if province.id == userProfile.province %} selected="selected"{% endif %}>{{ province.provinceName }}</option>
    {% endfor %}
</select>

<select id="city" name="front_user[userProfile][city]" disabled="disabled">
    <option data-province="" value="">地区</option>
    {% for city in cities %}
        <option data-province="{{ city.provinceId }}" value="{{ city.cityId }}"{% if city.cityId == userProfile.city %} selected="selected"{% endif %}>{{ city.cityName }}</option>
    {% endfor %}
</select>
{{ form_errors(editForm.userProfile.city) }}

<span id="tmp" style="display: none; position:absolute;"></span>