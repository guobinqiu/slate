{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}出错啦：{{ parent() }} {% endblock %}

{% block stylesheet %}
    <link href="{{ asset('css/404.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}
    {% include 'WenwenFrontendBundle:Components:_header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="main-error-con clearfix">
        <div class="errorCon top37">
            <img src="{{ asset('img/404/errorbg.png') }}" alt="页面报错" class="img-responsive center-block">
            <div class="errorText text-center top20">
                {% if errorMessage is defined and errorMessage is not empty %}
                    <p class="txt">{{ errorMessage }}</p>
                {% else %}
                    <p class="txt">对不起，出错啦！请确认您所输入的网址是否正确。</p>
                {% endif %}
                <p><span id="countdown">3</span>秒后为您跳转至首页</p>
                <p class="btn">
                    <a href="{{ path('_homepage') }}">返回首页</a>
                    <a href="{{ path('help_feedback') }}">联系客服</a>
                </p>
            </div>
        </div>
    </div>

<script type="text/javascript">
    (function () {
        var timeLeft = 3,
            cinterval;

        var timeDec = function (){
            timeLeft--;
            document.getElementById('countdown').innerHTML = timeLeft;
            if(timeLeft === 0){
                clearInterval(cinterval);
                location.href="{{ path('_homepage') }}";
            }
        };

        cinterval = setInterval(timeDec, 1000);
    })();
</script>
{% endblock %}



