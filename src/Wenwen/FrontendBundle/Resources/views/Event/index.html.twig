{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}活动中心{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/eventCenter.css') }} " type="text/css">
{% endblock %}

{% block header %}
    {% include 'WenwenFrontendBundle:Components:_header.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path('event_prize') }}">
			<div class="eventItem row">
				<div class="col-md-1"></div>
				<div class="eventImg col-sm-6 col-xs-12 pull-left"><img src="/img/event/luckyDrawBr.jpg" alt="幸运抽奖券" class="img-responsive center-block pull-right"></div>
				<div class="eventText col-sm-4 col-xs-12 pull-left">
					<h3>幸运抽奖券</h3>
					<p>完成一些任务就有机会参加抽奖哦！</p>
				</div>
				<div class="col-md-1"></div>
				<span class="status"><i class="fa fa-clock-o" aria-hidden="true"></i>活动进行中</span>
			</div>
		</a>
		<a href="{{ path('event_invite') }}">
			<div class="eventItem row">
				<div class="col-md-1"></div>
				<div class="eventImg col-sm-6 col-xs-12 pull-left"><img src="/img/event/inviteBr.jpg" alt="邀请好友" class="img-responsive center-block pull-right"></div>
				<div class="eventText col-sm-4 col-xs-12 pull-left">
					<h3>邀请好友</h3>
					<p>通过邀请好友，让您的好友帮您赚钱啦！</p>
				</div>
				<div class="col-md-1"></div>
				<span class="status"><i class="fa fa-clock-o" aria-hidden="true"></i>活动进行中</span>
			</div>
		</a>
		<a href="{{ path('event_checkin') }}">
		   <div class="eventItem row">
		    <div class="col-md-1"></div>
		    <div class="eventImg col-sm-6 col-xs-12 pull-left"><img src="/img/event/checkInBr.jpg" alt="签到领奖券" class="img-responsive center-block pull-right"></div>
		    <div class="eventText col-sm-4 col-xs-12 pull-left">
		     <h3>签到领奖券</h3>
		     <p>每天都来签到哦！</p>
		    </div>
		    <div class="col-md-1"></div>
		    <span class="status"><i class="fa fa-clock-o" aria-hidden="true"></i>活动进行中</span>
		   </div>
		</a>
	</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footer.html.twig' %} 
{% endblock %}