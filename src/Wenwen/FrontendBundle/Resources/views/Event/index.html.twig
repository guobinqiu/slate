{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}活动中心{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('css/eventCenter.css') }} " type="text/css">
    <!--[if lt IE 8]>
    <link href="{{ asset('css/bootstrap-ie7.css') }}" rel="stylesheet">
    <![endif]-->
{% endblock %}

{% block header %}
    {% include 'WenwenFrontendBundle:Components:_header.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path('event_prize') }}">
			<div class="eventItem row">
				<div class="eventImg col-sm-7 col-xs-12 pull-left"><img src="/img/event/luckyDrawBr.jpg" alt="幸运抽奖券" class="img-responsive center-block pull-right"></div>
				<div class="eventText col-sm-5 col-xs-12 pull-left">
					<h3>幸运抽奖券</h3>
					<p>完成一些任务就有机会参加抽奖哦！</p>
				</div>
				<span class="status"><i class="fa fa-clock-o" aria-hidden="true"></i>活动进行中</span>
			</div>
		</a>
		<a href="{{ path('event_invite') }}">
			<div class="eventItem row">
				<div class="eventImg col-sm-7 col-xs-12 pull-left"><img src="/img/event/inviteBr.jpg" alt="邀请好友" class="img-responsive center-block pull-right"></div>
				<div class="eventText col-sm-5 col-xs-12 pull-left">
					<h3>邀请好友</h3>
					<p>通过邀请好友，让您的好友帮您赚钱啦！</p>
				</div>
				<span class="status"><i class="fa fa-clock-o" aria-hidden="true"></i>活动进行中</span>
			</div>
		</a>
	</div>
{% endblock %}