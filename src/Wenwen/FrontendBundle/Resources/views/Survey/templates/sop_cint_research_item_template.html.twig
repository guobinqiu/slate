<div class="survey-item">
    <div class="title">
        {% if cint_research.is_answered == 1 %}
            {{ cint_research.title }}
        {% else %}
            <a href="{{ path('_cint_project_survey_information', {'cint_research': cint_research}) }}" class="open-link" target="_brank">{{ cint_research.title }}<span></span></a>
       {% endif %}    
    </div>
    <ul class="con clearfix">
        <li class="last">
            难度：
            {% if cint_research.loi <= 10 %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i></span>
            {% elseif cint_research.loi <= 30 %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i></span>
            {% else %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></span>
            {% endif %}
        </li>
    </ul>
</div>
<div class="rewardPoint"><i>{{ cint_research.extra_info.point.complete }}</i>积分</div>
<div class="survey-btn">
    {% if cint_research.is_answered == 1 %}
        <span class="disabled">回答完毕</span>
    {% else %}
        <a href="{{ path('_cint_project_survey_information', {'cint_research': cint_research}) }}" class="open-link" target="_brank">可回答</a>
    {% endif %}
</div>