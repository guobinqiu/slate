<div class="survey-item col-xs-5 col-sm-6 col-md-8">
    <div class="title">
        <a href="{{ path('wenwen_frontend_fulcrumprojectsurvey_information', {'fulcrum_research': fulcrum_research}) }}" class="open-link" target="_brank">{{ fulcrum_research.title }}<span></span></a>
    </div>
    <ul class="con clearfix">
        <li class="last">
            难度：
            {% if fulcrum_research.loi <= 10 %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i></span>
            {% elseif fulcrum_research.loi <= 30 %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="true"></i></span>
            {% else %}
                <span class="difficulty"><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></span>
            {% endif %}
        </li>
    </ul>
</div>
<div class="survey-info col-xs-7 col-sm-6 col-md-4 pull-right">
    <div class="rewardPoint pull-left"><i>{{ fulcrum_research.extra_info.point.complete }}</i>积分</div>
    <div class="survey-btn"><a href="{{ path('wenwen_frontend_fulcrumprojectsurvey_information', {'fulcrum_research': fulcrum_research}) }}" class="open-link" target="_brank">可回答</a></div>
</div>