{% set router_current = app.request.attributes.get('_route') %}
<li {{ router_current == '_homepage' ? 'class="ssi"':'' }}>
    <div class="survey-item">
        <div class="title">{{title}}</div>
        <ul class="con clearfix">
            <li class="first">
                <span>问卷编号</span>
                <p>{% if num is defined %} {{num}} {% else %}--{% endif %}</p>
            </li>
            <li>
                <span>问卷类型</span>
                <p class="ltGreen" title="{% if type_desc is defined %} type_desc {% else %}{% endif %} ">{% if type_label is defined %} {{type_label}} {% else %}其他{% endif %}</p>
            </li>
            <li>
                <span>回答期限</span>
                <p>{% if end_date is defined %} {{end_date}} {% else %}--{% endif %}</p>
            </li>
            <li class="last">
                <p><strong>{{ point }}</strong>积分</p>
            </li>
        </ul>
    </div>
    <div class="survey-btn">
    {% if answered is defined and answered%}
    完毕
    {% else %}
        {#todo:
        {% if tip is defined and tip %}
            <div class="apDiv">
              {{tip}}
                <div class="apDiv_close">
                <a href="#" onclick="$(this).parent().parent().remove();return false;">
                <img src="/img/common/notification_close.jpg" alt="Close" width="15" height="15" /></a>
                </div>
            </div>
        {% endif %}
        #}
        {% if type_class == 'quick' %}
        <a href="{{ url }}">投票</a>
        {% else %}
        <a href="{{ url }}" target="_brank">可回答</a>
        {% endif %}
    {% endif %}
    </div>
</li>
