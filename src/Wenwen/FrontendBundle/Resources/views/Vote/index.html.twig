{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}快速问答：{{ parent() }} {% endblock %}
{% block meta %}
<meta name="keywords" content="快速问答，热点问答，投票，有奖出题，站内动态，热门投票，答题" />
<meta name="description" content="快速问答页面提供热门问题一览，供用户查看自己感兴趣的问题，并选择自己想要进行的投票问题，且最新的问答在24小时内可多获得1个积分。" />
<meta name="title" content="快速问答:91问问调查网" />
{% endblock %}
{% block stylesheet %}
<link href="{{ asset('css/vote.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}
{% include 'WenwenFrontendBundle:Components:_header.html.twig' %}
{% endblock %}

{% block body %}
<div class="main-con w1000 clearfix">
	<div class="main-con-left left">
		<div class="vote vote-sub">
			<h1>快速问答</h1>
            {% include 'WenwenFrontendBundle:Vote:_voteList.html.twig' %}
            <div class="page-wrapper">
                {% include "WenwenFrontendBundle:Components:_pageNavs.html.twig" %}
            </div>
		</div>
	</div>
	{% include 'WenwenFrontendBundle:Vote:_voteRight.html.twig' %}
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footer.html.twig' %}
{% endblock %}

{% block javascript %}
<script type="text/javascript" src="{{ asset('js/component/countdown.js')}}" defer></script>
<script type="text/javascript" src="{{ asset('js/component/textScroll.js')}}" defer></script>
{% endblock %}
