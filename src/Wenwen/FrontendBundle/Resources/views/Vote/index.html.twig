{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent()  }} 快速问答 {% endblock %}

{% block stylesheet %}
{% endblock %}

{% block javascript %}
{% endblock %}
 
{% block body %}

{% block header %}
{% include 'WenwenFrontendBundle::headerUser.html.twig' %} 
{% endblock %}

<div class="main-con-left left">
    <div class="vote vote-sub">
        <em></em>
        <h1>快速问答</h1>
        <ul>
        {% if pagination is defined %}
            {% for item in pagination %}
            {% if (item.endTime|date("Ymd") >= "now"|date('Ymd')) %}
            <li {% if (item.startTime|date("Ymd") == "now"|date('Ymd')) %} class="vote-new" {% endif %}>
                <span class="vote-img">
                {% if (item.sqPath) %}
                <a href=""><img src="{{ asset(item.sqPath)}}" alt="{{item.sqPath}}"></a>
                {% else %}
                <img src="{{ asset('img/vote/no_image.jpg') }}" height="90" width="90">
                {% endif %}
                </span>
                <span class="vote-txt">
                    <div class="title"><a href="">{{ item.title }}</a></div>
                    <p>{% autoescape false %}{{ item.description }}{% endautoescape %}</p>
                    <div class="relate">
                        <span>参与人气：<strong>{{ item.answerCount }}</strong></span>
                        {% if (item.startTime|date("Ymd") != "now"|date('Ymd')) %}
                        <span class="vline"></span>
                        <span class="deadline">截止日期：{{ item.endTime|date("Y-m-d") }}</span>
                        {% endif %}
                    </div>
                </span>
                {% if (item.startTime|date("Ymd") == "now"|date("Ymd")) %}
                <div><input type="hidden" name="timelimit_ut" value="1440777600" /><div id="countdown" class="countdown"></div></div>
                <div class="tips expand-btn">
                    <span>?</span>
                    <div class="tips-con expand-con">24小时内回答此份快速回答，将额外获得1积分。</div>
                </div>
                {% endif %}
            </li>
            {% else %}
            <li class="vote-txt">
                <div class="title"><a href="">{{ item.title }}</a></div>
                <div class="relate">
                    <span class="deadline">调查期限：{{ item.startTime|date("Y/m/d") }}-{{ item.endTime|date("Y/m/d") }}</span>
                    <span>参与人气：<strong>{{ item.answerCount }}</strong></span>
                </div>
            </li>
            {% endif %}
            {% endfor %}
        {% endif %}
        </ul>
       
        {% if pagination is defined %}{{ knp_pagination_render(pagination) }}{%endif %}
    
        <!--  
        <div class="page-wrapper">
            <p class="page">
                <span class="active">1</span>
                <span>2</span>
                <span>3</span>
                <span>4</span>
                <span>5</span>
                <span>6</span>
                <span>尾页</span>
            </p>
        </div>
        -->
    </div>
</div>
<script type="text/javascript" src="{{ asset('js/lib/require.js')}}" defer async="true" data-main="{{ asset('js/app/vote')}}"></script>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle::footer.html.twig' %} 
{% endblock %}
