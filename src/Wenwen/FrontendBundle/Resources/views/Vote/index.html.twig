{% extends 'WenwenFrontendBundle::base.html.twig' %}
{% block title %}{{ parent() }}快速问答{% endblock %}
{% block meta %}
<meta name="keywords" content="快速问答，热点问答，投票，有奖出题" />
<meta name="description" content="快速问答页面提供热门问题一览，供用户查看自己感兴趣的问题，并选择自己想要进行的投票问题，且最新的问答在24小时内可多获得1个积分。" />
<meta name="title" content="91问问调 - 快速问答" />
{% endblock %}
{% block stylesheet %}
<link href="{{ asset('css/vote.css') }} " rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}
{% include 'WenwenFrontendBundle:Components:_header.html.twig' %}
{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-sm-9 col-xs-12">
			<div class="vote panel panel-default">
				<div class="panel-body top15">
		            {% include 'WenwenFrontendBundle:Vote:_voteList.html.twig' %}
		            <div class="page-wrapper">
		                {% include "WenwenFrontendBundle:Components:_pageNavs.html.twig" %}
		            </div>
		        </div>
			</div>
		</div>
		<div class="col-sm-3 hidden-xs">{% include 'WenwenFrontendBundle:Vote:_voteRight.html.twig' %}</div>
	</div>
</div>
{% endblock %}

{% block footer %}
{% include 'WenwenFrontendBundle:Components:_footer.html.twig' %}
{% endblock %}

{% block javascript %}
<script type="text/javascript" src="{{ asset('js/component/countdown.js')}}"></script>
<script type="text/javascript" src="{{ asset('js/component/textScroll.js')}}"></script>
<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>
{% endblock %}
