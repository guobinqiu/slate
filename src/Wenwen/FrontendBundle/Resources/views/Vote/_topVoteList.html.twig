<div class="vote panel panel-default">
	<div class="panel-body">
		<ul class="top10">
			{% if vote_list|length > 0  %}
				{% for item in vote_list %}
					<li {% if item.timelimit is defined %} class="vote-new" {% endif %}>
						<div class="row">
							<span class="vote-img hidden-xs hidden-sm pull-left">{% if (item.sqPath) %}<a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}"><img src="{{ asset(item.sqPath)}}" alt="{{item.title}}"></a>{% else %}<img src="{{ asset('assets/img/frontend/vote/no_image.jpg') }}" height="70" width="70">{% endif %}</span>
			<span class="vote-txt col-xs-5 col-sm-5 col-md-6">
				<div class="title"><a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">{{ item.title }}<span></span></a></div>
				{# <p class="visibleDesktop hiddenPhone hiddenTablet">{% autoescape false %}{{ item.description }}{% endautoescape %}</p> #}
				<div class="relate top15 hidden-xs hidden-sm">
					<div>参与人气：<span>{{ item.answerCount }}</span></div>
					<div>截止日期：{{ item.endTime|date("Y-m-d") }}</div>
				</div>
			</span>
							<div class="vote-info col-xs-7 col-sm-7 col-md-4 pull-right text-right">
								{% if item.timelimit is defined %}
									<div class="votePoint"><i>10</i>积分</div>
									<div class="votecd pull-right">
										<div class="tips">
											<i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" title="倒计时内回答此份快速回答，将额外获得5积分。"></i>
										</div>
										<input type="hidden" name="timelimit_ut" value="{{item.timelimit}}" /><div id="countdown" class="countdown"></div>
									</div>
								{% else %}
									<div class="votePoint"><i>5</i>积分</div>
								{% endif %}
								<div class="voteBW">
									{% if (item.endTime|date("Ymd") < "now"|date('Ymd')) %}
										<a href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}" class="vote-btn voteDisabled btn" type="button">去看看</a>
									{% else %}
										{% if app.session.has('uid') and item.answerable %}
											<a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}" class="vote-btn btn" type="button">去投票</a>
										{% else %}
											<a href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}" class="vote-btn voteDisabled btn" type="button">去看看</a>
										{% endif %}
									{% endif %}
								</div>
							</div>

						</div>
					</li>
					<hr>
				{% endfor %}
			{% endif %}
		</ul>
	</div>
</div>
