<ul>
    {% if vote_list|length > 0 %}
    {% for item in vote_list %}
        <li {% if item.timelimit is defined %} class="vote-new" {% endif %}>
            <div class="row">
                <div class="vote-img col-xs-4 col-sm-4 col-md-2 text-center">
                    {% if (item.sqPath) %}
                    <a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}"><img class="img-thumbnail" src="{{ asset(item.sqPath)}}" alt="{{item.title}}"></a>
                    {% else %}
                    <img src="{{ asset('img/vote/no_image.jpg') }}" height="90" width="90">
                    {% endif %}
                </div>
                <div class="vote-txt col-xs-8 col-sm-8 col-md-8">
                    <div class="title"><a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">{{ item.title }}</a></div>
                    <div class="con top10">{% autoescape false %}{{ item.description }}{% endautoescape %}</div>
                    <div class="relate corWeak relateVlist top5">
                        <div>参与人气：<span>{{ item.answerCount }}</span></div>
                        <div>截止日期：{{ item.endTime|date("Y-m-d") }}</div>
                    </div>
                </div>
                
                <div class="col-xs-12 col-sm-12 col-md-2">
                    <div class="votecd pull-right">
                        {% if item.timelimit is defined %}
                            <div class="tips">
                                <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" title="倒计时内回答此份快速回答，将额外获得1积分。"></i>
                            </div>
                            <input type="hidden" name="timelimit_ut" value="{{item.timelimit}}" /><div id="countdown" class="countdown text-right"></div>
                        {% endif %}
                        {% if app.session.has('uid')%}
                            {% if(item.endTime|date("Ymd") >= "now"|date('Ymd')) and item.answerable %}
                            <a class="vote-btn btn top5" type="button" href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">去投票</a>
                            {% else %}
                            <a class="vote-btn voteDisabled btn top5" type="button" href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}">去看看</a>
                            {% endif %}
                        {% else %}
                            {% if (item.endTime|date("Ymd") >= "now"|date('Ymd')) %}
                            <a class="vote-btn btn top15" type="button" href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">去投票</a>
                            {% else %}
                            <a class="vote-btn voteDisabled btn btn-md top5" type="button" href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}">去看看</a>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </li>
        <hr>
    {% endfor %}
{% endif %}
</ul>