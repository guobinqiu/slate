{% if vote_list|length > 0 %}
    {% for item in vote_list %}
        <div {% if item.timelimit is defined %} class="vote-new row" {% else %} class="row" {% endif %}>
            <div class="vote-img col-xs-4 col-md-2 text-center">
                {% if (item.sqPath) %}
                <a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}"><img src="{{ asset(item.sqPath)}}" alt="{{item.title}}"></a>
                {% else %}
                <img src="{{ asset('assets/img/frontend/vote/no_image.jpg') }}" height="90" width="90">
                {% endif %}
            </div>
            <div class="vote-txt col-xs-8 col-md-7">
                <div class="title"><a href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">{{ item.title }}</a></div>
                <div class="con">{% autoescape false %}{{ item.description }}{% endautoescape %}</div>
                <div class="relate relateVlist">
                    <div>参与人气：<span>{{ item.answerCount }}</span></div>
                    <div>截止日期：{{ item.endTime|date("Y-m-d") }}</div>
                </div>
            </div>
            <div class="votecd col-xs-11 col-md-3 text-right pull-right">
                {% if item.timelimit is defined %}
                    <div class="tips">
                        <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" title="倒计时内回答此份快速回答，将额外获得5积分。"></i>
                        <input type="hidden" name="timelimit_ut" value="{{item.timelimit}}" /><div id="countdown" class="countdown"></div>
                    </div>
                    
                {% endif %}
                {% if app.session.has('uid')%}
                    {% if(item.endTime|date("Ymd") >= "now"|date('Ymd')) and item.answerable %}
                    <a class="vote-btn btn" type="button" href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">去投票</a>
                    {% else %}
                    <a class="vote-btn voteDisabled btn" type="button" href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}">去看看</a>
                    {% endif %}
                {% else %}
                    {% if (item.endTime|date("Ymd") >= "now"|date('Ymd')) %}
                    <a class="vote-btn btn" type="button" href="{{ path('jili_frontend_vote_show',{'id':item.id}) }}">去投票</a>
                    {% else %}
                    <a class="vote-btn voteDisabled btn btn-md" type="button" href="{{ path('jili_frontend_vote_result',{'id':item.id}) }}">去看看</a>
                    {% endif %}
                {% endif %}
            </div>
        </div>
        <hr>
    {% endfor %}
{% endif %}