{% block captcha_widget %}
    {% spaceless %}
        {{ form_widget(form, { 'id': user_input_id, 'value': '' }) }}

        {% if addLayoutStylesheetInclude %}
            <link href="{{ path('captcha_layout_stylesheet_url') }}" rel="stylesheet" />
        {% endif %}

        {{ captcha_html | raw }}

        <script type="text/javascript">
            document.getElementById("SignupCaptcha_CaptchaImageDiv").getElementsByTagName("a").item(0).style.visibility='hidden';
        </script>
    {% endspaceless %}
{% endblock %}